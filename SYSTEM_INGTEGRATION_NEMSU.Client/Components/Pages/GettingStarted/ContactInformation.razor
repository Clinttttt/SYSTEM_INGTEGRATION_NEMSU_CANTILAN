@using SYSTEM_INGTEGRATION_NEMSU.Domain.DTOs.Student_RecordDtos
@using SYSTEM_INGTEGRATION_NEMSU.Domain.Entities.Student_Rcord
@inject PageState pageState
@inject IStudentRecordApiCommand studentRecordApi
<h1 class="mt-2 text-center text-lg font-bold text-teal-600">Contact Information</h1>


<EditForm Model="@contactInformation" OnValidSubmit="@HandleContactInformation" FormName="Contact">
    <div class="mt-4 p-2 ">
        <label class="block text-sm font-light text-gray-700 mb-1 text-teal-700">Mobile Number</label>
        <label class="input validator border border-teal-600 w-[98%] bg-cyan-50 px-2 hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
focus-within:border-cyan-600 focus-within:ring-1 focus-within:ring-cyan-600 focus-within:outline-none">
            <svg class="h-[1em] opacity-50 text-cyan-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                <g fill="none">
                    <path d="M7.25 11.5C6.83579 11.5 6.5 11.8358 6.5 12.25C6.5 12.6642 6.83579 13 7.25 13H8.75C9.16421 13 9.5 12.6642 9.5 12.25C9.5 11.8358 9.16421 11.5 8.75 11.5H7.25Z"
                          fill="currentColor"></path>
                    <path fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M6 1C4.61929 1 3.5 2.11929 3.5 3.5V12.5C3.5 13.8807 4.61929 15 6 15H10C11.3807 15 12.5 13.8807 12.5 12.5V3.5C12.5 2.11929 11.3807 1 10 1H6ZM10 2.5H9.5V3C9.5 3.27614 9.27614 3.5 9 3.5H7C6.72386 3.5 6.5 3.27614 6.5 3V2.5H6C5.44771 2.5 5 2.94772 5 3.5V12.5C5 13.0523 5.44772 13.5 6 13.5H10C10.5523 13.5 11 13.0523 11 12.5V3.5C11 2.94772 10.5523 2.5 10 2.5Z"
                          fill="currentColor"></path>
                </g>
            </svg>
            <input @bind="contactInformation.MobileNumber" type="tel"
                   class="tabular-nums placeholder:text-xs !outline-none !border-0"
                   required
                   placeholder="Enter Mobile Number"
                   pattern="[0-9]*"
                   minlength="11"
                   maxlength="11" />
        </label>


        <div class="mt-3">
            <label class="block text-sm font-light text-gray-700 mb-1 text-teal-700">Email Address</label>
            <label class="input validator border border-teal-600 w-[98%] bg-cyan-50 px-2 hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
focus-within:border-cyan-600 focus-within:ring-1 focus-within:ring-cyan-600 focus-within:outline-none">

                <svg class="h-[1em] opacity-50 text-cyan-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <g stroke-linejoin="round"
                       stroke-linecap="round"
                       stroke-width="2.5"
                       fill="none"
                       stroke="currentColor">
                        <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                        <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                    </g>
                </svg>
                <input @bind="contactInformation.EmailAddress" type="email" placeholder="Enter Email Address" required class="placeholder:text-xs !outline-none !border-0" />
            </label>
            <div class="validator-hint hidden">Enter valid email address</div>
        </div>

        <div class="mt-3">
            <label class="block text-sm font-light text-gray-700 mb-1 text-teal-700">Emergency Contact Number</label>
            <label class="input validator border border-teal-600 w-[98%] bg-cyan-50 px-2 hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
focus-within:border-cyan-600 focus-within:ring-1 focus-within:ring-cyan-600 focus-within:outline-none">
                <svg class="h-[1em] opacity-50 text-cyan-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                    <g fill="none">
                        <path d="M7.25 11.5C6.83579 11.5 6.5 11.8358 6.5 12.25C6.5 12.6642 6.83579 13 7.25 13H8.75C9.16421 13 9.5 12.6642 9.5 12.25C9.5 11.8358 9.16421 11.5 8.75 11.5H7.25Z"
                              fill="currentColor"></path>
                        <path fill-rule="evenodd"
                              clip-rule="evenodd"
                              d="M6 1C4.61929 1 3.5 2.11929 3.5 3.5V12.5C3.5 13.8807 4.61929 15 6 15H10C11.3807 15 12.5 13.8807 12.5 12.5V3.5C12.5 2.11929 11.3807 1 10 1H6ZM10 2.5H9.5V3C9.5 3.27614 9.27614 3.5 9 3.5H7C6.72386 3.5 6.5 3.27614 6.5 3V2.5H6C5.44771 2.5 5 2.94772 5 3.5V12.5C5 13.0523 5.44772 13.5 6 13.5H10C10.5523 13.5 11 13.0523 11 12.5V3.5C11 2.94772 10.5523 2.5 10 2.5Z"
                              fill="currentColor"></path>
                    </g>
                </svg>
                <input @bind="contactInformation.EmergencyContactNumber" type="tel"
                       class="tabular-nums placeholder:text-xs !outline-none !border-0"
                       required
                       placeholder="Enter Emergency Contact Number"
                       pattern="[0-9]*"
                       minlength="11"
                       maxlength="11" />
            </label>

        </div>

        <div class="mt-4 justify-between flex p-1">
            <button @onclick="()=> HandleSaveAsDraft()" class="btn text-neutral-700 font-light border-teal-600 bg-cyan-50">Save as Draft</button>
            <button type="submit" class="btn text-white bg-gradient-to-b from-cyan-500 to-teal-600">Save</button>
        </div>
    </div>
</EditForm>

@code {
    public ContactInformationDto contactInformation { get; set; } = new();
    public string? Error { get; set; }

    public async Task HandleContactInformation()
    {
        contactInformation.Savestatus = SaveStatusContact.Save;
        var results = await studentRecordApi.AddContactInformationAsync(contactInformation);
        if (results is null)
        {
            Error = "Fill up All Requirements";
        }
        pageState.SetViewContact(PageState.SaveAsDraftContact.Save);
    }
    public async Task HandleSaveAsDraft()
    {
        contactInformation.Savestatus = SaveStatusContact.Save_As_Draft;
        var results = await studentRecordApi.AddContactInformationAsync(contactInformation);
        if (results is null)
        {
            Error = "Fill up All Requirements";
        }
        pageState.SetViewContact(PageState.SaveAsDraftContact.SaveASDraft);
    }
}