@page "/FillOutRegistration"

<div class=" content w-full h-full flex items-center justify-center relative gap-2 flex-col bg-cyan-50 ">
    <!--breadcrumbs ngani-->
    <div class="scale-115 mb-1">
        <div class="breadcrumbs text-sm">
            <ul>
                <li><a class="text-cyan-600 font-normal">Home</a></li>
                <li><a class="text-cyan-600 font-normal">Registration</a></li>
                <li class="text-amber-600 font-normal">Enrollment Application</li>
            </ul>
        </div>
    </div>

    <!--Info ngani-->
    <div class=" border-teal-300 border-stone-300 p-4 rounded-lg shadow-lg w-[90%] h-[66%] border relative ">

        <div class="absolute top-0 left-0 h-9 w-full rounded-t-lg  bg-gradient-to-r from-teal-400 to-cyan-400"></div>
        <div class="absolute top-1 left-2 text-white font-bold">Student Registration Form &nbsp;<span class="mt-1 text-sm font-light ">Please fill out all required information accurately</span> </div>
        <div class="absolute top-1 right-2 text-white font-light text-sm mt-[2px]">You can save and continue later</div>




        <div class="flex flex-row justify-center gap-2 mt-8 h-[90%]">
            <div class="flex-1 h-full border border-teal-600 bg-gradient-to-t from-cyan-50 to-teal-50 rounded-sm overflow-y-auto">
                <h1 class="mt-1 text-center text-lg font-bold text-teal-600">Personal Information</h1>
                <div class="flex justify-center mt-4">
                    <!--info personal ngan-->
                    <div class="relative w-22 h-22">
                        <label class="mb-2 text-sm font-light text-teal-700 ml-5">Profile ID</label>
                        <input type="file" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10" />
                        <div class="mt-1 w-22 h-22 rounded-full border-1 border-cyan-500 bg-sky-100 flex items-center justify-center">
                            <svg class="w-8 h-8 text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                        </div>
                    </div>

                </div>
                <div class="max-w-4xl mx-auto mt-10 p-2 gap-2">
                    <!--una grid-->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                        <div>
                            <label class="block text-sm font-light text-gray-700 mb-1 text-teal-700 ">First Name</label>
                            <input type="text" placeholder="Enter First name"
                                   class=" placeholder:text-xs  w-full px-2 py-2 border border-teal-600  rounded-md  border-cyan-600  hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
         focus:border-cyan-600 focus:ring-1 focus:ring-cyan-600 focus:outline-none" />
                        </div>
                        <div>
                            <label class="block text-sm font-light  mb-1 text-teal-700">Middle Name</label>
                            <input type="text" placeholder="Enter middle name"
                                   class="w-full  placeholder:text-xs px-2 py-2 border border-teal-600  rounded-md border-cyan-600  hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
         focus:border-cyan-600 focus:ring-1 focus:ring-cyan-600 focus:outline-none" />
                        </div>
                        <div>
                            <label class="block text-sm font-light text-gray-700 mb-1 text-teal-700">Last Name</label>
                            <input type="text" placeholder="Enter Last name"
                                   class="w-full  placeholder:text-xs  px-2 py-2 border border-teal-600 rounded-md border-cyan-600     hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
         focus:border-cyan-600 focus:ring-1 focus:ring-cyan-600 focus:outline-none" />
                        </div>
                    </div>
                    <!--kaduha ni grid-->
                    <div class="mt-2 grid grid-cols-1 md:grid-cols-2 gap-1 justify-center">
                        <div>
                            <label class="block text-sm font-light text-gray-700 mb-1 text-teal-700">Date of birth</label>
                            <input type="datetime-local"
                                   class="input w-[90%] bg-cyan-50 border border-teal-600 text-gray-500 text-xs font-medium rounded-md  hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
         focus:border-cyan-600 focus:ring-1 focus:ring-cyan-600 focus:outline-none" />

                        </div>

                        <div>
                            <label class="block text-sm font-light mb-1 text-teal-700">Gender</label>
                            <select class="select border-teal-600 border w-[95%] text-cyan-600 font-normal bg-cyan-50 rounded-md text-xs
         hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
         focus:border-cyan-600 focus:ring-1 focus:ring-cyan-600 focus:outline-none">
                                <option disabled selected class="text-cyan-600 font-light">Select Gender</option>
                                <option>Male</option>
                                <option>Female</option>
                                <option>Prefer not to say</option>
                            </select>


                        </div>
                    </div>
                    <!--ka toyo grid-->
                    <div class="mt-2 grid grid-cols-1 md:grid-cols-2 gap-1 justify-center">
                        <div>
                            <label class="block text-sm font-light mb-1 text-teal-700">Civil Status</label>
                            <select class="select border-teal-600 border w-[95%] text-cyan-600 font-normal bg-cyan-50 text-xs rounded-md  hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
         focus:border-cyan-600 focus:ring-1 focus:ring-cyan-600 focus:outline-none" >
                                <option disabled selected class=" text-cyan-600  font-light">Select Status</option>
                                <option>Single</option>
                                <option>Taken</option>
                                <option>Married</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-light text-gray-700 mb-1 text-teal-700">Nationality</label>
                            <input type="text" placeholder="e.g., Filipino"
                                   class=" placeholder:text-xs   px-2 py-2 w-[95%] border border-teal-600  rounded-md  hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
         focus:border-cyan-600 focus:ring-1 focus:ring-cyan-600 focus:outline-none" />
                        </div>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm font-light text-gray-700 mb-1 text-teal-700">Permanent Address</label>
                        <input type="text" placeholder="Enter permanent address"
                               class=" placeholder:text-xs   px-2 py-2 w-[98%] border border-teal-600  rounded-md  hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
         focus:border-cyan-600 focus:ring-1 focus:ring-cyan-600 focus:outline-none" />
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm font-light text-gray-700 mb-1 text-teal-700">Current Address</label>
                        <input type="text" placeholder="Enter Current address (if different)"
                               class=" placeholder:text-xs   px-2 py-2 w-[98%] border border-teal-600  rounded-md  hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
         focus:border-cyan-600 focus:ring-1 focus:ring-cyan-600 focus:outline-none" />
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm font-light text-gray-700 mb-1 text-teal-700">Guardian/Parent Name</label>
                        <input type="text" placeholder="Enter guardian/parent name"
                               class=" placeholder:text-xs   px-2 py-2 w-[98%] border border-teal-600  rounded-md  hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
         focus:border-cyan-600 focus:ring-1 focus:ring-cyan-600 focus:outline-none" />
                    </div>

                    <!--cp number-->
                    <div class="mt-2">
                        <label class="block text-sm font-light text-gray-700 mb-1 text-teal-700">Guardian/Parent Name</label>
                        <label class="input validator  border border-teal-600 w-[98%] bg-cyan-50 px-2  hover:border-cyan-500 hover:ring-1 hover:ring-cyan-500
         focus:border-cyan-600 focus:ring-1 focus:ring-cyan-600 focus:outline-none" >
                            <svg class="h-[1em] opacity-50 text-cyan-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                                <g fill="none">
                                    <path d="M7.25 11.5C6.83579 11.5 6.5 11.8358 6.5 12.25C6.5 12.6642 6.83579 13 7.25 13H8.75C9.16421 13 9.5 12.6642 9.5 12.25C9.5 11.8358 9.16421 11.5 8.75 11.5H7.25Z"
                                          fill="currentColor"></path>
                                    <path fill-rule="evenodd"
                                          clip-rule="evenodd"
                                          d="M6 1C4.61929 1 3.5 2.11929 3.5 3.5V12.5C3.5 13.8807 4.61929 15 6 15H10C11.3807 15 12.5 13.8807 12.5 12.5V3.5C12.5 2.11929 11.3807 1 10 1H6ZM10 2.5H9.5V3C9.5 3.27614 9.27614 3.5 9 3.5H7C6.72386 3.5 6.5 3.27614 6.5 3V2.5H6C5.44771 2.5 5 2.94772 5 3.5V12.5C5 13.0523 5.44772 13.5 6 13.5H10C10.5523 13.5 11 13.0523 11 12.5V3.5C11 2.94772 10.5523 2.5 10 2.5Z"
                                          fill="currentColor"></path>
                                </g>
                            </svg>
                            <input type="tel"
                                   class="tabular-nums  placeholder:text-xs " 
                                   required
                                   placeholder="Phone"
                                   pattern="[0-9]*"
                                   minlength="11"
                                   maxlength="11" />
                        </label>

                    </div>

                    <div class="mt-4 justify-between flex p-1">
                        <button class="btn text-stone-600 border-teal-600 bg-cyan-50">Save as Draft</button>
                        <button class="btn text-white bg-gradient-to-b from-cyan-500 to-teal-600">Save</button>
                    </div>
                </div>


            </div>




            <div class="flex-1 h-full border border-teal-600 bg-gradient-to-t from-cyan-50 to-teal-50 rounded-sm overflow-y-auto">
                <h1 class="mt-1 text-center text-lg font-bold text-teal-600">Academic Information</h1>
            </div>
            <div class="flex-1 h-full border border-teal-600 bg-gradient-to-t from-cyan-50 to-teal-50 rounded-sm overflow-y-auto">
                <h1 class="mt-1 text-center text-lg font-bold text-teal-600">Contact Information</h1>
            </div>
        </div>




    </div>


    <!--timeline ngani-->
    <ul class="timeline ">
        <li>
            <div class="timeline-start timeline-box  border-cyan-400 border-1 text-teal-600 rounded-sm" style="background-color:rgb(210, 239, 255)">Start Registration</div>
            <div class="timeline-middle">
                <svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 20 20"
                     fill="currentColor"
                     class="text-amber-600 h-5 w-5">
                    <path fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                          clip-rule="evenodd" />
                </svg>
            </div>
            <hr class=" bg-cyan-600" />
        </li>
        <li>
            <hr class=" bg-cyan-600" />
            <div class="timeline-middle">
                <svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 20 20"
                     fill="currentColor"
                     class="text-amber-600 h-5 w-5">
                    <path fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                          clip-rule="evenodd" />
                </svg>
            </div>
            <div class="timeline-end timeline-box border-cyan-400 border-1 text-teal-600 rounded-sm" style="background-color:rgb(210, 239, 255)">Fill Out Registration Form</div>
            <hr class=" bg-cyan-600" />
        </li>
        <li>
            <hr class=" bg-cyan-600" />
            <div class="timeline-start timeline-box border-cyan-400 border-1 text-teal-600 rounded-sm" style="background-color:rgb(210, 239, 255)">Account Created</div>
            <div class="timeline-middle">
                <svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 20 20"
                     fill="currentColor"
                     class="text-cyan-600  h-5 w-5">
                    <path fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                          clip-rule="evenodd" />
                </svg>
            </div>
            <hr class=" bg-cyan-600" />
        </li>
        <li>
            <hr class=" bg-cyan-600" />
            <div class="timeline-middle">
                <svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 20 20"
                     fill="currentColor"
                     class=" text-cyan-600 h-5 w-5">
                    <path fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                          clip-rule="evenodd" />
                </svg>
            </div>
            <div class="timeline-end timeline-box border-cyan-400 border-1 text-teal-600 rounded-sm" style="background-color:rgb(210, 239, 255)">Student ID Assigned</div>
            <hr class=" bg-cyan-600" />
        </li>
        <li>
            <hr class=" bg-cyan-600" />
            <div class="timeline-start timeline-box border-cyan-400 border-1 text-teal-600 rounded-sm" style="background-color:rgb(210, 239, 255)">Login Ready</div>
            <div class="timeline-middle">
                <svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 20 20"
                     fill="currentColor"
                     class=" text-cyan-600 h-5 w-5">
                    <path fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                          clip-rule="evenodd" />
                </svg>
            </div>
        </li>
    </ul>
</div>

