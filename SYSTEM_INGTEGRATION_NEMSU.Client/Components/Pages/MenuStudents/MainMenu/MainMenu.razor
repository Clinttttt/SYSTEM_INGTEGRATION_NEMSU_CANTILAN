@page "/studentmenu"
@using SYSTEM_INGTEGRATION_NEMSU.Client.Components.Pages.ModalRespond
@rendermode InteractiveServer
@inject IJSRuntime JS
@inject IStudentRecordApiCommand studentRecordApi

<div class="h-screen content   overflow-hidden" style="background: radial-gradient(at 0% 0%, rgb(6, 182, 212) 0px, transparent 50%), radial-gradient(at 100% 100%, rgb(14, 116, 144) 0px, transparent 50%), radial-gradient(at 100% 0%, rgb(8, 145, 178) 0px, transparent 50%), radial-gradient(at 0% 100%, rgb(21, 94, 117) 0px, transparent 50%), rgb(17, 24, 39);">

    <div class="flex justify-center">
        <nav class="bg-white/65  w-[80%] backdrop-blur-sm shadow-xl rounded-2xl mx-4 mt-4 mb-8 p-4">
         
       
            
            <div class="flex items-center justify-between">

                <div class="flex items-center gap-4">
                    @if (!string.IsNullOrEmpty(preview))
                    {
                        <div class="w-12 h-12"> <img src="@preview" alt="Student Photo" class="w-full h-full object-cover rounded-full " /></div>
                    }
