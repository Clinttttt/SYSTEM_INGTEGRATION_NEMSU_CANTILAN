</div>
@code {
    [Parameter]
    public Guid CouresId { get; set; }
    public bool hasrender = false;

    public PersonalInformationDto? P { get; set; }
    public AcademicInformationDto? A { get; set; }
    public ContactInformationDto? C { get; set; }

    public CourseDto? PreviewCourse { get; set; }
    public FacultyPhotoId? photo { get; set; }
    public string? preview { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if(!hasrender && firstRender)
        {
            hasrender = true;
            photo = await studentRecordApi.StudentPhotoIDAsync();
            if (photo?.Photo is not null)
            {
                preview = $"data:{photo?.PhotoContentType};base64,{Convert.ToBase64String(photo!.Photo)}";
            }
            P = await studentRecordCommand.DisplayPersonalInformationAsync();
            A = await studentRecordCommand.DisplayAcademicInformation();
            C = await studentRecordCommand.DisplayContactInformationAsync();
            PreviewCourse = await enrollmentApiServices.PreviewCourseAsync(CouresId);
        }
        StateHasChanged();
    }

    public async Task SaveInformationAsync()
    {
        await studentRecordCommand.StudentSaveInformationAsync();     
    }

    public async Task Confirmation()
    {
        if (P?.Savestatus != SaveStatus.Save || A?.Savestatus != SaveStatusAcademic.Save || C?.Savestatus != SaveStatusContact.Save)
        {
            await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_requirements').checked = true");
        }
        else
        {
            await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_payment').showModal()");
        }
    }
    public async Task ReloadInformation()
    {
        P = await studentRecordCommand.DisplayPersonalInformationAsync();
        A = await studentRecordCommand.DisplayAcademicInformation();
        C = await studentRecordCommand.DisplayContactInformationAsync();
        PreviewCourse = await enrollmentApiServices.PreviewCourseAsync(CouresId);
        StateHasChanged();
    }
}
