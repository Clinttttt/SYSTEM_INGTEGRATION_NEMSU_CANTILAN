@using SYSTEM_INGTEGRATION_NEMSU.Domain.DTOs.Student_RecordDtos.NewFolder
@inject IStudentRecordApiCommand studentRecordCommand
@rendermode InteractiveServer
@inject IJSRuntime JS

<dialog id="my_modal_4" class="modal">
    <div class="modal-box w-11/12 max-w-6xl rounded-sm">

        <div class="flex items-center justify-between mb-6 pb-4 border-b-1 border-stone-500">
            <h3 class="text-2xl font-semibold text-gray-700 flex items-center gap-3">
                <div class="w-10 h-10 bg-gradient-to-br from-cyan-500 to-teal-500 rounded-xl flex items-center justify-center shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                </div>
                Edit Profile
            </h3>
            <form method="dialog">
                <button class="btn btn-sm btn-circle btn-ghost">✕</button>
            </form>
        </div>

        <EditForm Model="@studentUpdateInformation" OnValidSubmit="@HandlingUpdate" FormName="UpdatingAllInfo">
            <DataAnnotationsValidator />
            <div class="pb-4 max-h-[70vh] overflow-y-auto scrollbar-hide -mb-6">

                <div class="grid lg:grid-cols-3 gap-8">

                    <div class="space-y-4">
                        <h4 class="font-bold text-cyan-600 text-lg mb-4 pb-2 border-b-2 border-cyan-200 flex items-center gap-2">
                            Personal Information
                        </h4>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">First Name</span>
                            </label>
                            <InputText type="text" @bind-Value="studentUpdateInformation!.FirstName" class="input input-bordered input-sm" />
                        </div>
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Middle Name</span>
                            </label>
                            <InputText type="text" @bind-Value="studentUpdateInformation!.MiddleName" class="input input-bordered input-sm" />
                        </div>
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Last Name</span>
                            </label>
                            <InputText type="text" @bind-Value="studentUpdateInformation!.LastName" class="input input-bordered input-sm" />
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Date of Birth</span>
                            </label>
                            <InputDate @bind-Value="studentUpdateInformation.DateOfBirth" class="input input-bordered input-sm" />
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Gender</span>
                            </label>
                            <InputSelect class="select select-bordered select-sm" @bind-Value="studentUpdateInformation!.Gender">
                                <option value="@GenderChoice.Male">Male</option>
                                <option value="@GenderChoice.Female">Female</option>
                                <option value="@GenderChoice.Prefer_not_to_say">Prefer not to say</option>
                            </InputSelect>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Civil Status</span>
                            </label>
                            <InputSelect class="select select-bordered select-sm" @bind-Value="studentUpdateInformation!.CivilStatus">
                                <option value="@CivilStatusChoice.Single">Single</option>
                                <option value="@CivilStatusChoice.Married">Married</option>
                                <option value="@CivilStatusChoice.Taken">Taken</option>
                            </InputSelect>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Nationality</span>
                            </label>
                            <InputText type="text" @bind-Value="studentUpdateInformation!.Nationality" class="input input-bordered input-sm" />
                        </div>
                    </div>

               
                    <div class="space-y-4">
                        <h4 class="font-bold text-teal-600 text-lg mb-4 pb-2 border-b-2 border-teal-200 flex items-center gap-2">
                            Academic Information
                        </h4>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Student Type</span>
                            </label>
                            <InputSelect class="select select-bordered select-sm" @bind-Value="studentUpdateInformation!.StudentType">
                                <option value="@StudentTypeChoice.New">New Student</option>
                                <option value="@StudentTypeChoice.Old">Old Student</option>
                                <option value="@StudentTypeChoice.Transferee">Transferee</option>
                            </InputSelect>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Year Level</span>
                            </label>
                            <InputSelect class="select select-bordered select-sm" @bind-Value="studentUpdateInformation!.YearLevel">
                                <option value="@YearLevelChoice.First_Year">1st Year</option>
                                <option value="@YearLevelChoice.Second_Year">2nd Year</option>
                                <option value="@YearLevelChoice.Third_Year">3rd Year</option>
                                <option value="@YearLevelChoice.Fourth_Year">4th Year</option>
                            </InputSelect>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Semester</span>
                            </label>
                            <InputSelect class="select select-bordered select-sm" @bind-Value="studentUpdateInformation!.Semester">
                                <option value="@SemesterChoice.First_Semester">First Semester</option>
                                <option value="@SemesterChoice.Second_Semester">Second Semester</option>
                            </InputSelect>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Program</span>
                            </label>
                            <InputSelect class="select select-bordered select-sm" @bind-Value="studentUpdateInformation!.Program">
                                <option value="">-- Select Program --</option>

                                <option disabled class="font-semibold text-slate-600">College of Computer Studies</option>
                                <option value="@CourseProgram.Computer_Engineering">Bachelor of Science in Computer Engineering</option>
                                <option value="@CourseProgram.Computer_Science">Bachelor of Science in Computer Science</option>
                                <option value="@CourseProgram.Information_Technology">Bachelor of Science in Information Technology</option>

                                <option disabled class="font-semibold text-slate-600">Department of Industrial Technology</option>
                                <option value="@CourseProgram.BSIT_ArchitecturalDraftingTechnology">BS in Industrial Technology Major in Architectural Drafting Technology</option>
                                <option value="@CourseProgram.BSIT_AutomotiveTechnology">BS in Industrial Technology Major in Automotive Technology</option>
                                <option value="@CourseProgram.BSIT_ComputerTechnology">BS in Industrial Technology Major in Computer Technology</option>
                                <option value="@CourseProgram.BSIT_ElectricalTechnology">BS in Industrial Technology Major in Electrical Technology</option>
                                <option value="@CourseProgram.BSIT_ElectronicsTechnology">BS in Industrial Technology Major in Electronics Technology</option>
                                <option value="@CourseProgram.BSIT_FoodTechnology">BS in Industrial Technology Major in Food Technology</option>
                                <option value="@CourseProgram.BSIT_GarmentsTechnology">BS in Industrial Technology Major in Garments Technology</option>
                                <option value="@CourseProgram.BSIT_MechanicalTechnology">BS in Industrial Technology Major in Mechanical Technology</option>

                                <option disabled class="font-semibold text-slate-600">Department of General and Teacher Education</option>
                                <option value="@CourseProgram.BSEd_Filipino">BSEd Major in Filipino</option>
                                <option value="@CourseProgram.BSEd_English">BSEd Major in English</option>
                                <option value="@CourseProgram.BSEd_Mathematics">BSEd Major in Mathematics</option>
                                <option value="@CourseProgram.BSEd_Science">BSEd Major in Science</option>
                                <option value="@CourseProgram.BTVTEd_AutomotiveTechnology">BTVTEd Major in Automotive Technology</option>
                                <option value="@CourseProgram.BTVTEd_GarmentsAndFashionDesign">BTVTEd Major in Garments and Fashion Design</option>
                                <option value="@CourseProgram.BTVTEd_ElectricalTechnology">BTVTEd Major in Electrical Technology</option>
                                <option value="@CourseProgram.BTVTEd_ElectronicsTechnology">BTVTEd Major in Electronics Technology</option>
                                <option value="@CourseProgram.BTVTEd_FoodAndServicesManagement">BTVTEd Major in Food and Services Management</option>
                                <option value="@CourseProgram.BTVTEd_MechanicalTechnology">BTVTEd Major in Mechanical Technology</option>
                                <option value="@CourseProgram.BTLEd_HomeEconomics">BTLEd Major in Home Economics</option>
                                <option value="@CourseProgram.BTLEd_IndustrialArts">BTLEd Major in Industrial Arts</option>

                                <option disabled class="font-semibold text-slate-600">College of Criminal Justice Education</option>
                                <option value="@CourseProgram.BS_Criminology">Bachelor of Science in Criminology</option>

                                <option disabled class="font-semibold text-slate-600">Department of Business and Management</option>
                                <option value="@CourseProgram.BSHM_HospitalityManagement">Bachelor of Science in Hospitality Management</option>
                                <option value="@CourseProgram.BSTM_TourismManagement">Bachelor of Science in Tourism Management</option>
                                <option value="@CourseProgram.BSBA_FinancialManagement">BSBA Major in Financial Management</option>
                                <option value="@CourseProgram.BSBA_HumanResourceManagement">BSBA Major in Human Resource Management</option>
                            </InputSelect>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Strand</span>
                            </label>
                            <InputSelect class="select select-bordered select-sm" @bind-Value="studentUpdateInformation!.Strand">
                                <option value="@StrandChoice.Stem">STEM</option>
                                <option value="@StrandChoice.Abm">ABM</option>
                                <option value="@StrandChoice.Humss">HUMSS</option>
                                <option value="@StrandChoice.Gas">GAS</option>
                                <option value="@StrandChoice.Tvl" selected>TVL</option>
                            </InputSelect>
                        </div>

               
                        <div class="form-control">
                        
                            <div class="relative mr-10">
                                <div class="w-32 h-32 rounded-full border-4 border-gray-200 overflow-hidden bg-gray-100 flex items-center justify-center mx-auto">
                                    @if (!string.IsNullOrEmpty(Preview))
                                    {
                                        <img src="@Preview" alt="Profile Photo" class="object-cover w-full h-full" />
                                    }
                                    else
                                    {
                                        <svg class="w-16 h-16 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                                        </svg>
                                    }
                                </div>
                                <label class="absolute bottom-0 right-1/2 translate-x-16 w-10 h-10 bg-cyan-600 rounded-full flex items-center justify-center cursor-pointer hover:bg-cyan-700 transition-colors shadow-lg">
                                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                    <InputFile OnChange="HandleFileSelected" type="file" accept="image/*" class="hidden" />
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="space-y-4">
                        <h4 class="font-bold text-stone-600 text-lg mb-4 pb-2 border-b-2 border-stone-300 flex items-center gap-2">
                            Contact Information
                        </h4>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Mobile Number</span>
                            </label>
                            <InputText type="tel" @bind-Value="studentUpdateInformation!.MobileNumber" class="input input-bordered input-sm" />
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Email Address</span>
                            </label>
                            <InputText type="email" @bind-Value="studentUpdateInformation!.EmailAddress" class="input input-bordered input-sm" />
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Emergency Contact</span>
                            </label>
                            <InputText type="tel" @bind-Value="studentUpdateInformation!.EmergencyContactNumber" class="input input-bordered input-sm" />
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold text-xs uppercase">Permanent Address</span>
                            </label>
                            <InputTextArea class="textarea textarea-bordered textarea-sm h-24" @bind-Value="studentUpdateInformation!.PermanentAddress" placeholder="Enter address"></InputTextArea>
                        </div>
                    </div>
                </div>

                <div class="modal-action mt-6 pt-4 border-t-2 border-gray-200">
                    <form method="dialog">
                        <button class="btn btn-outline btn-primary gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            Cancel
                        </button>
                    </form>
                    <button type="submit" class="btn bg-cyan-600 gap-2 text-white hover:bg-cyan-700">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Save Changes
                    </button>
                </div>
            </div>
        </EditForm>
    </div>
</dialog>

@code {
    [Parameter]
    public PersonalInformationDto? P { get; set; }

    [Parameter]
    public AcademicInformationDto? A { get; set; }

    [Parameter]
    public ContactInformationDto? C { get; set; }

    public bool hasloaded = false;
    public ProfileUpdateDto studentUpdateInformation = new();


    public string? Preview { get; set; }
    [Parameter]
    public FacultyPhotoId? photo { get; set; }

    [Parameter]
    public EventCallback<string> PreviewChanged { get; set; }

    public byte[]? Photo { get; set; }
    public string? PhotoContentType { get; set; }

    [Parameter]
    public EventCallback UpdateInfo { get; set; }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;

        if (file.Size > 10 * 1024 * 1024)
        {
           
            return;
        }

        using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
        using var ms = new MemoryStream();
        await stream.CopyToAsync(ms);

        Photo = ms.ToArray();
        PhotoContentType = file.ContentType;
        Preview = $"data:{photo?.PhotoContentType};base64,{Convert.ToBase64String(photo.Photo!)}";

       
        await PreviewChanged.InvokeAsync(Preview);
        StateHasChanged();
    }

    protected override void OnParametersSet()
    {
        if (!hasloaded && P is not null && A is not null && C is not null)
        {
            hasloaded = true;
              
            studentUpdateInformation.StudentId = P.StudentId;
            studentUpdateInformation.FirstName = P.FirstName;
            studentUpdateInformation.MiddleName = P.MiddleName;
            studentUpdateInformation.LastName = P.LastName;
            studentUpdateInformation.DateOfBirth = P.DateOfBirth;
            studentUpdateInformation.Gender = P.Gender;
            studentUpdateInformation.CivilStatus = P.CivilStatus;
            studentUpdateInformation.Nationality = P.Nationality;
            studentUpdateInformation.PermanentAddress = P.PermanentAddress;
            studentUpdateInformation.MobileNumber = C.MobileNumber;
            studentUpdateInformation.EmailAddress = C.EmailAddress;
            studentUpdateInformation.EmergencyContactNumber = C.EmergencyContactNumber;
            studentUpdateInformation.StudentType = A.StudentType;
            studentUpdateInformation.YearLevel = A.YearLevel;
            studentUpdateInformation.Semester = A.Semester;
            studentUpdateInformation.Strand = A.Strand;
            studentUpdateInformation.Program = A.Program;
        }

        StateHasChanged();
    }

    public async Task HandlingUpdate()
    {
        Console.WriteLine("HandlingUpdate CALLED!");

        try
        {
          
            if (Photo != null && PhotoContentType != null)
            {
                var info = new StudentMiniInfoDto
                    {
                        Photo = Photo,
                        PhotoContentType = PhotoContentType
                    };
                await studentRecordCommand.StudentSchoolIdAsync(info);
            }

       
            await studentRecordCommand.UpdateAllDetailsAsync(studentUpdateInformation); 
            await JS.InvokeVoidAsync("dialogHelper.closeDialog", "my_modal_4");

           
            await UpdateInfo.InvokeAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error Caused: " + ex.Message);
        }
    }
}