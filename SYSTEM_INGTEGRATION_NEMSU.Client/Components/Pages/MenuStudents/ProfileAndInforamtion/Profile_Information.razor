@code {
    public bool hasrender = false;
    public HandlingAllStudentsDetailsDto? studentsDetailsDto { get; set; }
    public PersonalInformationDto? P { get; set; }
    public AcademicInformationDto? A { get; set; }
    public ContactInformationDto? C { get; set; }
    public FacultyPhotoId? photo { get; set; }
    public string? preview { get; set; }
    protected override async Task OnAfterRenderAsync(bool firstrender)
    {

        if (!hasrender && firstrender)
        {
            hasrender = true;
            photo = await studentRecordApi.StudentPhotoIDAsync();
            if (photo?.Photo is not null)
            {
                preview = $"data:{photo?.PhotoContentType};base64,{Convert.ToBase64String(photo!.Photo)}";
            }
            P = await studentRecordApi.DisplayPersonalInformationAsync();
            A = await studentRecordApi.DisplayAcademicInformation();
            C = await studentRecordApi.DisplayContactInformationAsync();
        }
        StateHasChanged();
    }
    public async Task ReloadInfo()
    {
        P = await studentRecordApi.DisplayPersonalInformationAsync();
        A = await studentRecordApi.DisplayAcademicInformation();
        C = await studentRecordApi.DisplayContactInformationAsync();
        StateHasChanged();
    }
    public async Task SaveInformation()
    {
        await studentRecordApi.StudentSaveInformationAsync();
        await ReloadInfo();
        StateHasChanged();
    }


}