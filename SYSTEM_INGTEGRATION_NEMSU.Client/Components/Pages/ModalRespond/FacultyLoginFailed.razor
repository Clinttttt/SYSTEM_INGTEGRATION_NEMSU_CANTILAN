<input type="checkbox" id="my_modal_faculty_login_failed" class="modal-toggle" />
<div class="modal" role="dialog">
    <div class="modal-box max-w-md bg-white rounded-2xl shadow-2xl border-2 border-red-100">




        <div class="flex justify-center mb-4">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
            </div>
        </div>


        <h3 class="text-2xl font-bold text-center text-gray-700 mb-2">Login Failed</h3>


        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <p class="text-center text-red-700 text-sm font-semibold">
                Invalid username or password
            </p>
            <p class="text-center text-red-600 text-xs mt-2">
                Please check your credentials and try again
            </p>
        </div>


        <div class="mb-6">
            <p class="text-xs text-gray-600 font-semibold mb-2">Troubleshooting tips:</p>
            <ul class="text-xs text-gray-600 space-y-1">

                <li class="flex items-start gap-2">
                    <span class="text-red-500 mt-0.5">•</span>
                    <span>Verify your username is correct</span>
                </li>
                <li class="flex items-start gap-2">
                    <span class="text-red-500 mt-0.5">•</span>
                    <span>Ensure password is entered correctly</span>
                </li>
                <li class="flex items-start gap-2">
                    <span class="text-red-500 mt-0.5">•</span>
                    <span>Account may not be registered yet</span>
                </li>
            </ul>
        </div>


        <div class="modal-action mt-6 flex flex-col gap-3">
            <label for="my_modal_faculty_login_failed" class="btn bg-red-600 hover:bg-red-700 text-white border-0 w-full rounded-lg transition-all">
                Try Again
            </label>
            <a href="/facultyregister" class="btn btn-outline btn-error w-full rounded-lg hover:bg-red-50">
                Create New Account
            </a>
        </div>
    </div>
    <label class="modal-backdrop" for="my_modal_login_failed"></label>
</div>

@code {

    private string LoginErrorMessage { get; set; } = "Invalid username or password";


    public void SetLoginError(string message)
    {
        LoginErrorMessage = message;
        StateHasChanged();
    }
}