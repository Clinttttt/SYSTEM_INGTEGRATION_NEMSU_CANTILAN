
<input type="checkbox" id="my_modal_register_failed" class="modal-toggle" />
<div class="modal" role="dialog">
    <div class="modal-box max-w-md bg-white rounded-2xl shadow-2xl border-2 border-red-100">
     
        <label for="my_modal_register_failed" class="btn btn-sm btn-circle btn-ghost absolute right-3 top-3 hover:bg-red-50">✕</label>

       
        <div class="flex justify-center mb-4">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </div>
        </div>

      
        <h3 class="text-2xl font-bold text-center text-gray-700 mb-2">Registration Failed</h3>

     
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <p class="text-center text-red-700 text-sm">
                @ErrorMessage
            </p>
        </div>


        <div class="mb-6">
            <p class="text-xs text-gray-600 font-semibold mb-2">Common issues:</p>
            <ul class="text-xs text-gray-600 space-y-1">
                <li class="flex items-start gap-2">
                    <span class="text-red-500 mt-0.5">•</span>
                    <span>Passwords do not match</span>
                </li>
                <li class="flex items-start gap-2">
                    <span class="text-red-500 mt-0.5">•</span>
                    <span>Username already exists</span>
                </li>           
                <li class="flex items-start gap-2">
                    <span class="text-red-500 mt-0.5">•</span>
                    <span>All required fields must be filled</span>
                </li>
            </ul>
        </div>


        <div class="modal-action mt-6 flex gap-3 justify-center">
            <label for="my_modal_register_failed" class="btn bg-red-600 hover:bg-red-700 text-white border-0 px-8 rounded-lg transition-all">
                Try Again
            </label>
        </div>
    </div>
    <label class="modal-backdrop" for="my_modal_register_failed"></label>
</div>

@code {
    
    private string ErrorMessage { get; set; } = "Registration failed. Please check your information and try again.";

   
    public void SetErrorMessage(string message)
    {
        ErrorMessage = message;
        StateHasChanged();
    }
}