@inject IJSRuntime JS
@rendermode InteractiveServer
<input type="checkbox" id="my_modal_direct_enroll_successfully" class="modal-toggle" />
<div class="modal" role="dialog">
    <div class="modal-box relative bg-white max-w-md rounded-md">

        <div class="flex justify-center mb-4">
            <div class="rounded-full bg-teal-100 p-3">
                <svg class="w-16 h-16 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
        </div>


        <h3 class="text-2xl font-bold text-center text-gray-700 mb-2">Enrollment Successful!</h3>

        <p class="text-center text-gray-600 mb-6">
            Enrollment successful. You now have access to the course and its updates.
        </p>


        <div class="modal-action justify-center">
            <div @onclick="()=> CloseHandle()" for="my_modal_direct_enroll_successfully" class="btn bg-teal-600 text-white w-full sm:w-auto px-8">
                Got it!
            </div>
        </div>
    </div>
</div>
@code{
    [Parameter]
    public EventCallback callback { get; set; }

    public async Task CloseHandle()
    {
        await callback.InvokeAsync();
        await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_direct_enroll_successfully').checked = false");
        StateHasChanged();
    }

}