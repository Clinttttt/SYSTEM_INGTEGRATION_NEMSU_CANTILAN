@using SYSTEM_INGTEGRATION_NEMSU.Infrastructure.Helper
@inject LogoutService logoutService

<input type="checkbox" id="my_modal_logout" class="modal-toggle" />
<div class="modal" role="dialog">
    <div class="modal-box max-w-md rounded-md">
        <div class="flex flex-col items-center text-center">

            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
            </div>

            <h3 class="text-2xl font-bold text-gray-700 mb-2">Logout Confirmation</h3>
            <p class="text-gray-600 mb-6">Are you sure you want to logout? You will need to sign in again to access your account.</p>
        </div>

        <div class="flex gap-3 justify-center">
            <label for="my_modal_logout" class="btn btn-ghost px-6">Cancel</label>
            <button @onclick="logoutService.HandleLogoutAsync" class="btn bg-teal-600 hover:bg-teal-700 text-white border-none px-8">Logout</button>
        </div>
    </div>
</div>
