<input type="checkbox" id="my_modal_save_information" class="modal-toggle" />
<div class="modal" role="dialog">
    <div class="modal-box max-w-md rounded-md p-6">
        <div class="flex flex-col items-center text-center">
            <div class="bg-cyan-100 rounded-full p-3 mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-cyan-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>

            <h3 class="text-2xl font-semibold text-gray-700 mb-2">Save Information</h3>
            <p class="text-gray-600 mb-4 text-sm">Are you sure you want to save changes to your profile information? This will update your personal details in the system.</p>

            <div class="modal-action justify-center w-full gap-3 mt-2">
                <label for="my_modal_save_information" class="btn btn-outline btn-error">Cancel</label>
                <label @onclick="()=> SaveInfo.InvokeAsync()" for="my_modal_save_information" class="btn bg-cyan-500 text-white hover:bg-cyan-600">Confirm Save</label>
            </div>
        </div>
    </div>
</div>


@code{
    [Parameter]
    public EventCallback SaveInfo { get; set; }
    
}