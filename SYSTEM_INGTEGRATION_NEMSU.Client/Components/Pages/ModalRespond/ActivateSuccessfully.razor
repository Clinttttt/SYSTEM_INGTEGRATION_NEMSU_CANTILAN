@inject NavigationManager navigation
@inject IJSRuntime JS
<input type="checkbox" id="my_modal_active_successfully" class="modal-toggle" />
<div class="modal" role="dialog">
    <div class="modal-box max-w-md rounded-md">

        <div class="flex justify-center mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-green-400 to-emerald-500 rounded-full flex items-center justify-center">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                </svg>
            </div>
        </div>


        <h3 class="text-2xl font-bold text-center text-gray-700 mb-3">Active Successful!</h3>


        <p class="text-center text-gray-600 mb-6">
            You have successfully been set as active for this course. You will now receive all updates and announcements.
        </p>


        <div class="bg-gradient-to-br from-teal-50 to-cyan-50 rounded-lg p-4 mb-6 border border-teal-100">
            <div class="flex items-start gap-3">
                <div class="w-8 h-8 bg-teal-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div>
                    <h5 class="font-semibold text-gray-700 text-sm mb-1">What happens next?</h5>
                    <p class="text-gray-600">This course is now active. You will continue receiving updates and messages as usual.</p>
                </div>
            </div>
        </div>


        <div class="flex gap-3">
            <button @onclick="()=> HideModal()" class="flex-1 btn bg-gradient-to-r from-cyan-500 to-teal-600 text-white border-0 hover:from-cyan-600 hover:to-teal-700">
                Done
            </button>
            <NavLink href="/enrolledcourse" class="flex-1 btn btn-outline border-teal-500 text-teal-600 hover:bg-teal-50 hover:border-teal-600">
                Course List
            </NavLink>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid? CourseId { get; set; }


    public async Task HideModal()
    {
        await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_active_successfully').checked = false;");
        navigation.NavigateTo($"/coursedetails/{CourseId}");
        StateHasChanged();
    }

}