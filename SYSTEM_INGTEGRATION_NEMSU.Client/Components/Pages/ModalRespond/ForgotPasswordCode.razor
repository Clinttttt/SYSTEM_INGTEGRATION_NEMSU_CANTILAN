<input type="checkbox" id="my_modal_send_code" class="modal-toggle" />
<div class="modal" role="dialog">
    <div class="modal-box max-w-md rounded-md">
        <div class="flex flex-col items-center text-center">
         
            <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
            </div>

            <h3 class="text-2xl font-bold text-gray-700 mb-2">Verification Code Sent</h3>
            <p class="text-gray-600 mb-4">We've sent a 6-digit verification code to your email.</p>

            <div class="bg-gray-50 border-2 border-teal-500 rounded-lg p-6 mb-6 w-full">
                <p class="text-sm text-gray-600 mb-2">Your verification code:</p>
                <p class="text-4xl font-bold text-teal-600 tracking-widest">@Code</p>
            </div>

            <div class="bg-cyan-50 border border-cyan-200 rounded-lg p-4 mb-4 w-full">
                <p class="text-sm text-cyan-800">
                    <span class="font-semibold">Tips:</span> You can copy and paste this code directly into the verification field.
                </p>
            </div>
        </div>

        <div class="modal-action justify-center">
            <label for="my_modal_send_code" class="btn bg-teal-600 hover:bg-teal-700 text-white border-none px-8">
                Got It
            </label>
        </div>
    </div>
</div>
@code{
    [Parameter]
    public string? Code { get; set; }
}