@rendermode InteractiveServer
<dialog id="my_modal_archive" class="modal modal-bottom sm:modal-middle ">
    <div class="modal-box rounded-sm">
        <div class="flex justify-center mb-4">
            <div class="rounded-full bg-amber-50 p-3">
                <svg class="w-12 h-12 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
            </div>
        </div>
        <h3 class="text-2xl font-bold text-center mb-2 text-gray-700">Lock Course?</h3>
        <p class="text-center text-gray-600 mb-6">
            Are you sure you want to lock this course? It will be hidden from purchases, but enrolled students can continue their learning without interruption.
        </p>
        <div class="modal-action justify-center">
            <form method="dialog" class="flex gap-3">
                <button class="btn btn-ghost text-gray-700">Cancel</button>
                <button @onclick="OnClickHandler" class="btn bg-amber-600 hover:bg-amber-700 text-white border-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    Lock Course
                </button>
            </form>
        </div>
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>
@code {
    [Parameter]
    public EventCallback OnClickHandler { get; set; }
}