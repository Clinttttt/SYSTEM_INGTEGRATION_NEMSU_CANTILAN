@inject IHandlingStudentsApi handlingStudents
@rendermode InteractiveServer

<div class="container mx-auto p-6 pb-13">
    <div class="mb-6 flex justify-between items-center gap-4">
        <h3 class="text-3xl font-bold text-teal-600 flex items-center gap-2">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Student Invoice Records
        </h3>

        <div class="relative w-full max-w-md">
            <input type="text"
                   @bind="searchQuery"
                   @bind:event="oninput"
                   placeholder="Search by name, course code, or status..."
                   class="w-full px-4 py-2 pl-10 pr-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent" />
            <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        </div>
    </div>


    @if (!hasrender)
    {
        <div class="flex justify-center items-center py-32">
            <div class="text-center">
                <div class="relative">
                    <div class="w-20 h-20 border-4 border-orange-200 border-t-orange-600 rounded-full animate-spin mx-auto"></div>
                </div>
                <p class="text-gray-600 mt-6 text-lg font-semibold">Loading Invoice...</p>
            </div>
        </div>
    }
    else
    {
        
            @if (filteredRecords == null || !filteredRecords.Any())
            {
                <div class="flex justify-center items-center py-32">
                    <div class="text-center">
                        <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M9 12h6m-6 4h6m2 4H7a2 2 0 01-2-2V6a2 2 0 012-2h8l4 4v10a2 2 0 01-2 2z" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-700 mb-2">No Invoices Found</h3>
                        <p class="text-gray-500 text-sm">@(string.IsNullOrWhiteSpace(searchQuery) ? "There are currently no invoices available." : "No invoices match your search criteria.")</p>
                    </div>
                </div>
            }
            else
            {
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">


                @foreach (var record in filteredRecords)
                {
                    <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 overflow-hidden">

                        <div class="bg-gradient-to-br from-teal-500 to-cyan-600 px-6 py-4">
                            <div class="flex justify-between items-center">
                                <h5 class="text-white font-semibold text-lg flex items-center gap-2">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                    Invoice
                                </h5>
                                <span class="@GetStatusBadgeClass(record.Status) px-4 py-1.5 rounded-full text-sm font-semibold">
                                    @record.Status
                                </span>
                            </div>
                        </div>

                        <div class="p-6">

                            <div class="mb-4 pb-4 border-b border-gray-200">
                                <div class="flex items-center gap-3">
                                    <div class="w-12 h-12 bg-cyan-100 text-cyan-600 rounded-lg flex items-center justify-center">
                                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-xs text-gray-500 uppercase tracking-wide">Student Name</p>
                                        <h6 class="text-base font-semibold text-gray-700">@record.FullName</h6>
                                    </div>
                                </div>
                            </div>


                            <div class="mb-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-12 h-12 bg-cyan-100 text-cyan-600 rounded-lg flex items-center justify-center">
                                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M18 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zM6 4h5v8l-2.5-1.5L6 12V4z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-xs text-gray-500 uppercase tracking-wide">Course Code</p>
                                        <p class="text-base font-semibold text-gray-700">@record.CourseCode</p>
                                    </div>
                                </div>
                            </div>


                            <div class="mb-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-12 h-12 bg-teal-100 text-teal-600 rounded-lg flex items-center justify-center">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-xs text-gray-500 uppercase tracking-wide">Date Enrolled</p>
                                        <p class="text-base font-semibold text-gray-700">@record.DateEnrolled.ToString("MMM dd, yyyy")</p>
                                    </div>
                                </div>
                            </div>


                            <div class="mb-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-12 h-12 bg-amber-100 text-amber-600 rounded-lg flex items-center justify-center">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                                        </svg>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-xs text-gray-500 uppercase tracking-wide">Student ID</p>
                                        <p class="text-xs font-mono text-gray-600 truncate">@record.StudentId</p>
                                    </div>
                                </div>
                            </div>


                            <div class="mt-6 pt-4 border-t border-gray-200">
                                <div class="flex justify-between items-center">
                                    <div>
                                        <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Total Amount</p>
                                        <h4 class="text-2xl font-bold text-teal-600">₱@record.Cost.ToString("N2")</h4>
                                    </div>
                                    <button class="@GetStatusButtonClass(record.Status) px-4 py-2 rounded-lg font-semibold text-sm flex items-center gap-2 transition-colors">
                                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                            @if (record.Status == InvoiceStatus.Paid)
                                            {
                                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                                            }
                                            else if (record.Status == InvoiceStatus.Unpaid)
                                            {
                                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                                            }
                                            else
                                            {
                                                <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                                            }
                                        </svg>
                                        @record.Status
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }            


        </div>
}
    }
</div>

@code {
    public List<StudendBillRecordDtoDto>? records { get; set; }
    public bool hasrender = false;
    private string searchQuery = string.Empty;

    private List<StudendBillRecordDtoDto>? filteredRecords
    {
        get
        {
            if (records == null) return null;

            if (string.IsNullOrWhiteSpace(searchQuery))
                return records;

            var query = searchQuery.ToLower();
            return records.Where(r =>
                (r.FullName?.ToLower().Contains(query) ?? false) ||
                (r.CourseCode?.ToLower().Contains(query) ?? false) ||
                (r.Status?.ToString().ToLower().Contains(query) ?? false) ||
                (r.StudentId?.ToLower().Contains(query) ?? false)
            ).ToList();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!hasrender && firstRender)
        {
            hasrender = true;
            records = await handlingStudents.StudentRecordAsync();
        }
        StateHasChanged();
    }

    private string GetStatusBadgeClass(InvoiceStatus? status)
    {
        return status switch
        {
            InvoiceStatus.Paid => "bg-teal-500 text-white",
            InvoiceStatus.Unpaid => "bg-yellow-500 text-white",
            _ => "bg-gray-500 text-white"
        };
    }

    private string GetStatusButtonClass(InvoiceStatus? status)
    {
        return status switch
        {
            InvoiceStatus.Paid => "bg-teal-100 text-teal-700 hover:bg-teal-200",
            InvoiceStatus.Unpaid => "bg-yellow-100 text-yellow-700 hover:bg-yellow-200",
            _ => "bg-gray-100 text-gray-700 hover:bg-gray-200"
        };
    }
}