@code {
    [Parameter]
    public string? DepartmentParam { get; set; }
    public bool Hasrender = false;
    
    private CourseDepartment department;
    public bool Isloading = true;
    public FacultyPhotoId? facultyPhoto { get; set; }
    public string? PreviewUrl { get; set; }
    private string SearchQuery = "";

    private List<HandlingStudentsDto>? ListStudent { get; set; }

    private List<HandlingStudentsDto>? FilteredStudents = null;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!Hasrender && firstRender)
        {
            Hasrender = true;
            facultyPhoto = await facultyRecord.FacultyPhotoIDAsync();

            if (facultyPhoto?.Photo is not null)
            {
                PreviewUrl = $"data:{facultyPhoto?.PhotoContentType};base64,{Convert.ToBase64String(facultyPhoto!.Photo)}";
            }
            if (Enum.TryParse<CourseDepartment>(DepartmentParam, true, out var result))
            {
                department = result;
            }
            ListStudent = await handlingStudentsApi.DisplayStudentByDepartmentAsync(department);
            await LoadStudents();
            StateHasChanged();
        }
    }

    private string GetDepartmentClass() =>
        department switch
        {
            CourseDepartment.DCS => "text-amber-600",
            CourseDepartment.DIT => "text-rose-400",
            CourseDepartment.DBM => "text-yellow-600",
            CourseDepartment.CCJE => "text-sky-600",
            CourseDepartment.DGTT => "text-green-600",
            _ => "text-gray-600"
        };

    public async Task LoadStudents()
    {
        Isloading = true;
        await Task.Delay(500);
        FilteredStudents = ListStudent;
        Isloading = false;
    }

    private void FilterStudents()
    {
        if (string.IsNullOrWhiteSpace(SearchQuery))
        {
            FilteredStudents = ListStudent;
        }
        else
        {
            var query = SearchQuery.ToLower();
            FilteredStudents = ListStudent!.Where(s =>
                s.StudentName.ToLower().Contains(query) ||
                s.StudentSchoolId!.ToLower().Contains(query) ||
                s.Email!.ToLower().Contains(query)).ToList();
        }
    }

    private void ClearSearch()
    {
        SearchQuery = "";
        FilteredStudents = ListStudent;
    }
}