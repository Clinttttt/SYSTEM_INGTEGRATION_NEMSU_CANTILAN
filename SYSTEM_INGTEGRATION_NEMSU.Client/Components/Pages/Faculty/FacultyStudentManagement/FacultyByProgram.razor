@using SYSTEM_INGTEGRATION_NEMSU.Client.Components.Pages.Faculty.FacultyStudentManagement.FacultyByProgramView
@rendermode InteractiveServer

<div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
    <div class="mb-6">
        <h2 class="text-xl font-bold text-gray-600 ">Select Program/Major</h2>
        <p class="text-gray-500 text-sm">Choose a program to view enrolled students</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

        @if (Department == CourseDepartment.DCS)
        {
            <FacultyDCS />
        }
        else if (Department == CourseDepartment.DIT)
        {
            <FacultyDIT Program="program" />
        }
        else if (Department == CourseDepartment.CCJE)
        {
            <FacultyCCJE />
        }
        else if (Department == CourseDepartment.DBM)
        {
            <FacultyDBM />
        }
        else if (Department == CourseDepartment.DGTT)
        {
            <FacultyDGTT />
        }
    
    </div>
    @if(Department == CourseDepartment.None)
    {
    <div class="flex justify-center items-center py-32">
        <div class="text-center">
            <div class="relative">
                <div class="w-20 h-20 border-4 border-cyan-200 border-t-cyan-600 rounded-full animate-spin mx-auto"></div>
            </div>
            <p class="text-gray-600 mt-6 text-lg font-semibold">Loading Program...</p>
        </div>
    </div>
    }
</div>

@code {
    [Parameter]
    public CourseDepartment? Department { get; set; } = null;
    [Parameter]
    public CourseProgram program { get; set; }
  
}