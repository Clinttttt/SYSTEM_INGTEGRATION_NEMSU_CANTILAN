@page "/yearlevelview/{Program}/{yearLevel}"
@inject IHandlingStudentsApi handlingStudents
@inject IFacultyRecordApi facultyRecord
@rendermode InteractiveServer


<div class="relative h-screen content overflow-hidden ">
    <div class="drawer lg:drawer-open h-screen">
        <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col h-screen overflow-auto scrollbar-hide">
            <label for="my-drawer-2" class="btn btn-primary drawer-button lg:hidden m-4">
                Open drawer
            </label>

            <div class=" p-5 pb-18 ">
                <div class="mb-8">
                    <div class="-mt-1">
                        <NavLink href="@($"/yearlevel/{Program}")" class="inline-flex items-center gap-2 text-teal-500 hover:text-teal-700 font-semibold text-sm mb-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                            </svg>
                            Back to Year Level
                        </NavLink>
                        <h1 class="text-sm font-normal text-gray-500 leading-tight">Explore student enrollment by year</h1>
                    </div>
                </div>


                <div class="bg-white rounded-lg shadow-sm border border-gray-200 ">

                    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-br from-teal-50 to-teal-50">
                        <div class="flex items-center justify-between">
                            <div>
                                <h2 class="text-2xl font-bold text-gray-700">@ProgramResults.GetDisplayName() - @YearLevelResults.GetDisplayName()</h2>
                                <p class="text-sm text-gray-600 mt-1">Total Enrolled: <span class="font-semibold text-teal-600">@totalStudents</span> students</p>
                            </div>
                            <div class="flex items-center gap-3">
                                <input type="text"
                                       @bind="searchQuery"
                                       @bind:event="oninput"
                                       @onkeyup="OnSearchChanged"
                                       placeholder="Search students..."
                                       class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent" />
                            </div>
                        </div>
                    </div>

             
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50 border-b border-gray-200">
                                <tr>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Student ID</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Full Name</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Email</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Course</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                @if (Students != null && Students.Any())
                                {
                                    @foreach (var student in Students)
                                    {
                                        <tr class="hover:bg-gray-50 transition-colors">
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="text-sm font-medium text-gray-900">@student.StudentSchoolId</span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <div class="flex-shrink-0 h-10 w-10 rounded-full flex items-center justify-center" style="background: @student.ProfileColor">
                                                        <span class="text-white font-semibold text-sm">@GetInitials(student.StudentName)</span>
                                                    </div>
                                                    <div class="ml-4">
                                                        <div class="text-sm font-medium text-gray-900">@student.StudentName</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4">
                                                <span class="text-sm text-gray-600">@student.Email</span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="text-sm text-gray-600">@student.CourseTitle</span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full @GetStatusClass(student.studentCourseStatus)">
                                                    @student.studentCourseStatus
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                                <NavLink href="@($"/facultyviewtudents/{student.StudentId}")" class="text-teal-600 hover:text-teal-900 font-medium text-sm">
                                                    View Details
                                                </NavLink>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="px-6 py-12 text-center">
                                            <div class="flex flex-col items-center justify-center">
                                                <svg class="w-16 h-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                                                </svg>
                                                <p class="text-gray-500 font-medium">No students found</p>
                                                <p class="text-gray-400 text-sm mt-1">Try adjusting your search criteria</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>


                    <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
                        <div class="flex items-center justify-between">
                            <div class="text-sm text-gray-600">
                                Showing <span class="font-medium">@GetStartIndex()</span> to <span class="font-medium">@GetEndIndex()</span> of <span class="font-medium">@totalStudents</span> students
                            </div>
                            <div class="flex items-center gap-2">
                                <button @onclick="PreviousPage"
                                        disabled="@(currentPage == 1)"
                                        class="px-3 py-1 text-sm border border-gray-300 rounded-md hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                                    Previous
                                </button>


                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    var pageNum = i;
                                    <button @onclick="() => GoToPage(pageNum)"
                                            class="@(currentPage == pageNum ? "px-3 py-1 text-sm bg-teal-600 text-white rounded-md font-semibold" : "px-3 py-1 text-sm border border-gray-300 rounded-md hover:bg-gray-100") transition-colors">
                                        @pageNum
                                    </button>
                                }

                                <button @onclick="NextPage"
                                        disabled="@(currentPage >= totalPages)"
                                        class="px-3 py-1 text-sm border border-gray-300 rounded-md hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                                    Next
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <LogoutRespond />
        <SettingsNotAvailable />

        <div class="drawer-side">
            <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
            <div class="min-h-full w-64 bg-white shadow-xl flex flex-col border-r border-r-gray-200">


                <div class="relative p-6 bg-gradient-to-br from-cyan-500 to-teal-600">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-white opacity-10 rounded-full -mr-16 -mt-16"></div>
                    <div class="absolute bottom-0 left-0 w-24 h-24 bg-white opacity-10 rounded-full -ml-12 -mb-12"></div>

                    <div class="flex flex-col items-center">

                        @if (!string.IsNullOrEmpty(PreviewUrl))
                        {
                            <img src="@PreviewUrl" alt="Faculty Photo" class="w-20 h-20 rounded-full  shadow-lg mb-3" />
                        }
                        else
                        {
                            <svg class=" text-amber-500 w-20 h-20 rounded-full bg-white p-1 shadow-lg mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                        }

                        <h3 class="text-white font-bold text-sm">Facilitator Dashboard</h3>
                    </div>
                </div>


                <nav class="flex-1 p-4 overflow-y-auto">
                    <div class="space-y-1 mb-6">

                        <NavLink href="/profileinformation" class="flex items-center gap-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors group">
                            <svg class="w-5 h-5 text-gray-400 group-hover:text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <span class="font-medium">Profile</span>
                        </NavLink>

                        <NavLink href="/enrolledcourse" class="flex items-center gap-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors group">
                            <svg class="w-5 h-5 text-gray-400 group-hover:text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            <span class="font-medium">Students Records</span>
                        </NavLink>

                        <NavLink href="/paymenthistory" class="flex items-center gap-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors group">
                            <svg class="w-5 h-5 text-gray-400 group-hover:text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                            </svg>
                            <span class="font-medium">Manage Course</span>
                        </NavLink>

                        <NavLink href="/announcement" class="flex items-center gap-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors group">
                            <svg class="w-5 h-5 text-gray-400 group-hover:text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                            </svg>
                            <span class="font-medium">Announcements</span>
                        </NavLink>
                    </div>

                    <div class="border-t border-gray-200 my-4"></div>

                    <div class="space-y-1">
                        <label for="my_modal_settings_not_available" class="flex items-center gap-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors group cursor-pointer">
                            <svg class="w-5 h-5 text-gray-400 group-hover:text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <span class="font-medium">Settings</span>
                        </label>

                      <label for="my_modal_logout" class="flex items-center gap-3 px-4 py-3 text-red-600 rounded-lg hover:bg-red-50 transition-colors group cursor-pointer">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                            <span class="font-medium">Logout</span>
                        </label>
                    </div>
                </nav>

                <div class="p-4 border-t border-gray-200 bg-gray-50">
                    <p class="text-xs text-gray-500 text-center">© 2025 Student Portal</p>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public string? Program { get; set; }

    [Parameter]
    public string? yearLevel { get; set; }

    public CourseProgram ProgramResults { get; set; }
    public YearLevelChoice YearLevelResults { get; set; }
    public bool hasrender = false;


    public List<HandlingStudentsDto>? Students { get; set; }

    public FacultyPhotoId? facultyPhoto { get; set; }
    public string? PreviewUrl { get; set; }


    private int currentPage = 1;
    private int pageSize = 10;
    private int totalStudents = 0;
    private int totalPages => (int)Math.Ceiling(totalStudents / (double)pageSize);


    private string searchQuery = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!hasrender && firstRender)
        {
            hasrender = true;


            facultyPhoto = await facultyRecord.FacultyPhotoIDAsync();
            if (facultyPhoto?.Photo is not null)
            {
                PreviewUrl = $"data:{facultyPhoto?.PhotoContentType};base64,{Convert.ToBase64String(facultyPhoto!.Photo)}";
            }


            if (Enum.TryParse<CourseProgram>(Program, true, out var program))
            {
                ProgramResults = program;
            }
            if (Enum.TryParse<YearLevelChoice>(yearLevel, true, out var yearlevel))
            {
                YearLevelResults = yearlevel;
            }


            await LoadStudents();
            StateHasChanged();
        }
    }


    private async Task LoadStudents()
    {
        var result = await handlingStudents.StudentByYearLevelAsync(
            ProgramResults,
            YearLevelResults,
            currentPage,
            pageSize,
            searchQuery);

        if (result != null)
        {
            Students = result.Students;
            totalStudents = result.TotalCount;
        }
    }


    private async Task GoToPage(int page)
    {
        if (page < 1 || page > totalPages) return;
        currentPage = page;
        await LoadStudents();
    }


    private async Task NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            await LoadStudents();
        }
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadStudents();
        }
    }


    private async Task OnSearchChanged()
    {
        currentPage = 1;
        await LoadStudents();
    }


    private int GetStartIndex()
    {
        if (totalStudents == 0) return 0;
        return (currentPage - 1) * pageSize + 1;
    }


    private int GetEndIndex()
    {
        var end = currentPage * pageSize;
        return Math.Min(end, totalStudents);
    }


    private string GetInitials(string? fullName)
    {
        if (string.IsNullOrWhiteSpace(fullName)) return "NA";

        var names = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (names.Length == 0) return "NA";
        if (names.Length == 1) return names[0].Substring(0, Math.Min(2, names[0].Length)).ToUpper();

        return (names[0][0].ToString() + names[^1][0].ToString()).ToUpper();
    }


    private string GetStatusClass(StudentCourseStatus status)
    {
        return status switch
        {
            StudentCourseStatus.Active => "bg-green-100 text-green-800",
            StudentCourseStatus.Inactive => "bg-amber-100 text-amber-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
}