@code {
    [Parameter]
    public Guid CourseId { get; set; }


    public bool Hasrender = false;
    private bool IsLoading = true;
    private string SearchQuery = "";

    [Parameter]
    public List<HandlingStudentsDto>? studentlist { get; set; }
    private CourseDto? Course { get; set; }
    public QuickStatsDto? quickStats { get; set; }
    public int StudentEnrolled { get; set; }
    private string? Error { get; set; }
    public FacultyPhotoId? facultyPhoto { get; set; }
    public string? PreviewUrl { get; set; }
    public FacultyPhotoId? studentphoto { get; set; }
    public string? StudentPhoto { get; set; }
    private List<HandlingStudentsDto>? FilteredStudents = new();


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!Hasrender && firstRender)
        {
            Hasrender = true;
            facultyPhoto = await facultyRecord.FacultyPhotoIDAsync();

            if (facultyPhoto?.Photo is not null)
            {
                PreviewUrl = $"data:{facultyPhoto?.PhotoContentType};base64,{Convert.ToBase64String(facultyPhoto!.Photo)}";
            }
            Course = await handlingApiCourse.GetCourseAsync(CourseId);        
            studentlist = await handlingStudentsApi.DisplayStudentByCoursesAsync(Course!.CourseCode!);
            quickStats = await handlingApiCourse.DisplayStatsAsync(Course.CourseCode!);
            StudentEnrolled = studentlist!.Count();
            await  LoadStudents();
            foreach (var f in FilteredStudents!)
            {
                studentphoto = await handlingStudents.StudentPhotoIDAsync(f.StudentId);
                if (studentphoto?.Photo is not null)
                {
                    StudentPhoto = $"data:{studentphoto?.PhotoContentType};base64,{Convert.ToBase64String(studentphoto!.Photo)}";
                }
            }
           
        }
        StateHasChanged();

    }
   

    private async Task LoadStudents()
    {
        IsLoading = true;

    
        await Task.Delay(500);
        FilteredStudents = studentlist;
        IsLoading = false;
    }

    private void FilterStudents()
    {
        if (string.IsNullOrWhiteSpace(SearchQuery))
