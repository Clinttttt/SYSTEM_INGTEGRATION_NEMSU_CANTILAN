@page "/facultyviewtudents/{StudentId:guid}"


@inject IHandlingStudentsApi handlingStudentsApi
@rendermode InteractiveServer

<div class="relative h-screen content overflow-hidden">
    <div class="drawer lg:drawer-open h-screen">
        <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col h-screen overflow-auto">
            <label for="my-drawer-2" class="btn btn-primary drawer-button lg:hidden m-4">
                Open drawer
            </label>
            @if (!hasrender)
            {
        <div class="flex justify-center items-center py-32">
            <div class="text-center">
                <div class="relative">
                    <div class="w-20 h-20 border-4 border-cyan-200 border-t-cyan-600 rounded-full animate-spin mx-auto"></div>
                </div>
                <p class="text-gray-600 mt-6 text-lg font-semibold">Loading students...</p>
            </div>
        </div>
            }
            @if (studentsDetailsDto is not null)
            {
                <div class="flex-1 p-6 pb-19" style="background: linear-gradient(135deg, #f0fdfa 0%, #ecfeff 100%);">


                    <div class="relative rounded-3xl shadow-2xl overflow-hidden mb-6" style="background-color:@(studentsDetailsDto.ProfileColor ?? "#06b6d4") ">
                        <div class="absolute inset-0 bg-black opacity-5"></div>
                        <div class="relative px-8 py-10">
                            <div class="flex flex-col md:flex-row items-center md:items-start gap-6">

                                <div class="relative">
                                    <div class="w-32 h-32 bg-white rounded-full flex items-center justify-center shadow-xl border-4 border-white">
                                        <img src="/img/student_logo.jpg" class="w-22 h-22" />
                                    </div>
                                    <div class="absolute bottom-0 right-0 w-8 h-8   @(studentsDetailsDto.studentCourseStatus == StudentCourseStatus.Inactive ? "bg-amber-400" : "bg-emerald-400") rounded-full border-4 border-white"></div>
                                </div>


                                <div class="flex-1 text-center md:text-left">
                                    <h1 class="text-4xl font-semibold text-white mb-2">@studentsDetailsDto.FullName</h1>
                                    <div class="flex flex-wrap gap-3 justify-center md:justify-start mb-4">
                                        <span class="px-4 py-1.5 bg-white/20 backdrop-blur-sm rounded-full text-white text-sm font-medium">@studentsDetailsDto.StudentType?.GetDisplayName()</span>
                                        <span class="px-4 py-1.5 bg-white/20 backdrop-blur-sm rounded-full text-white text-sm font-medium">@studentsDetailsDto.YearLevel?.GetDisplayName()</span>
                                        <span class="px-4 py-1.5  rounded-full text-white text-sm font-semibold  @(studentsDetailsDto.studentCourseStatus == StudentCourseStatus.Inactive ? "bg-amber-500" : "bg-emerald-400/90 ")">@studentsDetailsDto.studentCourseStatus?.GetDisplayName()</span>
                                    </div>
                                    <p class="text-white text-lg mb-2">@studentsDetailsDto.Program?.GetDisplayName()</p>
                                    <div class="flex flex-wrap gap-4 justify-center md:justify-start text-white/90">
                                        <span class="flex items-center gap-2">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2" />
                                            </svg>
                                          @studentsDetailsDto.StudentSchoolId
                                        </span>
                                        <span class="flex items-center gap-2">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                            </svg>
                                          @studentsDetailsDto.Semester?.GetDisplayName()
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="bg-white rounded-3xl shadow-xl p-8">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center">
                                <svg  style="color:@studentsDetailsDto.ProfileColor" class="w-7 h-7 " fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                            </div>
                            <h2 class="text-3xl font-bold text-gray-700" >Complete Student Profile</h2>
                        </div>


                        <div class="border-b border-gray-200 mb-8">
                            <p class="text-gray-600 pb-4">Complete overview of student information including personal details, academic records, and contact information.</p>
                        </div>


                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">


                            <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-2xl p-6 border border-blue-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Full Name</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.FullName</p>
                            </div>

                            <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-2xl p-6 border border-purple-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Date of Birth</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.DateOfBirth?.ToString("MMMM dd, yyyy")</p>
                            </div>

                            <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-6 border border-green-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Gender</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.Gender</p>
                            </div>

                            <div class="bg-gradient-to-br from-orange-50 to-amber-50 rounded-2xl p-6 border border-orange-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Civil Status</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.CivilStatus</p>
                            </div>

                            <div class="bg-gradient-to-br from-red-50 to-rose-50 rounded-2xl p-6 border border-red-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Nationality</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.Nationality</p>
                            </div>


                            <div class="bg-gradient-to-br from-indigo-50 to-blue-50 rounded-2xl p-6 border border-indigo-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Student Type</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.StudentType?.GetDisplayName()</p>
                            </div>

                            <div class="bg-gradient-to-br from-teal-50 to-cyan-50 rounded-2xl p-6 border border-teal-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Year Level</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.YearLevel?.GetDisplayName()</p>
                            </div>

                            <div class="bg-gradient-to-br from-violet-50 to-purple-50 rounded-2xl p-6 border border-violet-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Semester</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.Semester?.GetDisplayName()</p>
                            </div>

                            <div class="bg-gradient-to-br from-sky-50 to-blue-50 rounded-2xl p-6 border border-sky-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Program</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.Program?.GetDisplayName()</p>
                            </div>

                            <div class="bg-gradient-to-br from-lime-50 to-green-50 rounded-2xl p-6 border border-lime-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Major</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.Major?.GetDisplayName()</p>
                            </div>

                            <div class="bg-gradient-to-br from-yellow-50 to-orange-50 rounded-2xl p-6 border border-yellow-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Strand</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.Strand?.GetDisplayName()</p>
                            </div>

                            <div class="bg-gradient-to-br from-pink-50 to-red-50 rounded-2xl p-6 border border-pink-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Enrolled</h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.DateEnrolled.ToString("MMMM dd, yyyy")</p>
                            </div>


                            <div class="bg-gradient-to-br from-cyan-50 to-blue-50 rounded-2xl p-6 border border-cyan-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1 flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                    </svg>
                                    Email Address
                                </h3>
                                <p class="text-lg font-semibold text-gray-600 break-all">@studentsDetailsDto.EmailAddress</p>
                            </div>

                            <div class="bg-gradient-to-br from-emerald-50 to-teal-50 rounded-2xl p-6 border border-emerald-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1 flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                    </svg>
                                    Mobile Number
                                </h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.MobileNumber</p>
                            </div>

                            <div class="bg-gradient-to-br from-rose-50 to-pink-50 rounded-2xl p-6 border border-rose-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1 flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                    Emergency Contact
                                </h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.EmergencyContactNumber</p>
                            </div>

                            <div class="col-span-1 md:col-span-2 lg:col-span-3 bg-gradient-to-br from-slate-50 to-gray-50 rounded-2xl p-6 border border-slate-100">
                                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1 flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                    Permanent Address
                                </h3>
                                <p class="text-lg font-semibold text-gray-600">@studentsDetailsDto.PermanentAddress</p>
                            </div>
                        </div>


                    </div>

                </div>
            }
        </div>
        <div class="drawer-side">
            <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
            <ul class="menu min-h-full w-62 p-4 text-white" style="background: radial-gradient(at 0% 0%, rgb(6, 182, 212) 0px, transparent 50%), radial-gradient(at 100% 100%, rgb(14, 116, 144) 0px, transparent 50%), radial-gradient(at 100% 0%, rgb(8, 145, 178) 0px, transparent 50%), radial-gradient(at 0% 100%, rgb(21, 94, 117) 0px, transparent 50%), rgb(17, 24, 39);">
                <li class="mx-auto mb-4">
                    <div class="w-[92px] h-[92px] bg-gradient-to-br from-amber-50 to-amber-50 rounded-full flex items-center justify-center border-4 border-orange-300 shadow-lg">
                        <svg class="w-13 h-13 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                </li>
                <li><a class="text-white text-2xl font-light btn btn-outline btn-dash btn-primary">Course Records</a></li>
                <li class="mt-10"><NavLink href="/createcourse" class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Create Course</NavLink></li>
                <li class="mt-2"><a class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Settings</a></li>
                <li class="mt-2"><a class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Logout</a></li>
                <li class="mt-10"><NavLink href="/studentmanagement" class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Student Records</NavLink></li>
                <li class="mt-2"><NavLink href="/facultyannouncement" class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Announcements</NavLink></li>
                <li class="mt-2"><NavLink href="/facultyprofile" class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Profile</NavLink></li>
            </ul>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid StudentId { get; set; }

    private bool hasrender = false;
    public HandlingAllStudentsDetailsDto? studentsDetailsDto { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if(!hasrender && firstRender)
        {
            hasrender = true;
            studentsDetailsDto = await handlingStudentsApi.DisplayAllStudentsDetailsAsync(StudentId);
        }
        StateHasChanged();
    }



}