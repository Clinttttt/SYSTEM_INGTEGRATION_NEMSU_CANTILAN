@page "/createcourse"

@using SYSTEM_INGTEGRATION_NEMSU.Domain.Entities
@inject IHandlingApiCourse handlingCourse
@inject NavigationManager navigate
@rendermode InteractiveServer


<div class="relative h-screen content overflow-hidden animate-fade-in">
    <div class="drawer lg:drawer-open h-screen">
        <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col h-screen overflow-auto">
            <label for="my-drawer-2" class="btn btn-primary drawer-button lg:hidden m-4">
                Open drawer
            </label>

            <!-- Main Content -->
            <div class="flex-1 p-6 pb-17 " style="background: linear-gradient(135deg, #f0fdfa 0%, #ecfeff 100%);">

                <div class="mb-6 flex items-center gap-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-cyan-500 to-cyan-600 rounded-xl flex items-center justify-center shadow-lg">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-cyan-700">Create New Course</h1>
                        <p class="text-gray-500 text-xs">Fill in the details to add a new course</p>
                    </div>
                </div>


                <div class="max-w-5xl mx-auto">
                    <div class="bg-white rounded-2xl shadow-xl border border-cyan-100 overflow-hidden">


                        <div class="bg-gradient-to-r from-cyan-500 to-cyan-600 px-6 py-4">
                            <h2 class="text-white font-semibold text-sm">Course Information</h2>
                        </div>


                        <div class="p-6">
                            <EditForm Model="@createCourse" OnValidSubmit="@HandleSubmit" FormName="CreateCourse">
                                <div class="space-y-6">

                                    <!--basic info-->
                                    <div class="border-l-4 border-cyan-500 pl-4">
                                        <h3 class="text-sm font-bold text-gray-700 mb-4">Basic Information</h3>
                                        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">

                                            <div>
                                                <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                    Course Code <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative group">
                                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                        <svg class="w-4 h-4 text-gray-400 group-focus-within:text-cyan-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
                                                        </svg>
                                                    </div>
                                                    <input @bind="createCourse.CourseCode"
                                                    class="w-full pl-10 pr-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all bg-gray-50 focus:bg-white"
                                                    placeholder="CS101" />
                                                </div>
                                            </div>

                                            <div class="md:col-span-2">
                                                <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                    Course Name <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative group">
                                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                        <svg class="w-4 h-4 text-gray-400 group-focus-within:text-cyan-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                                        </svg>
                                                    </div>
                                                    <input @bind="createCourse.Title"
                                                    class="w-full pl-10 pr-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all bg-gray-50 focus:bg-white"
                                                    placeholder="Introduction to Computer Science" />
                                                </div>
                                            </div>

                                            <div class="md:col-span-2">
                                                <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                    Category <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative group">
                                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">

                                                        <svg class="w-4 h-4 text-gray-400 group-focus-within:text-cyan-500 transition-colors" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                                                            <path d="M12.013 6.175 7.006 9.369l5.007 3.194-5.007 3.193L2 12.545l5.006-3.193L2 6.175l5.006-3.194 5.007 3.194ZM6.981 17.806l5.006-3.193 5.006 3.193L11.987 21l-5.006-3.194Z" />
                                                            <path d="m12.013 12.545 5.006-3.194-5.006-3.176 4.98-3.194L22 6.175l-5.007 3.194L22 12.562l-5.007 3.194-4.98-3.211Z" />
                                                        </svg>

                                                    </div>
                                                    <select @bind="createCourse.CategoryId"
                                                    class="w-full pl-10 pr-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all bg-gray-50 focus:bg-white">
                                                        <option value="">Select Category</option>
                                                        <option value="11111111-1111-1111-1111-111111111111">Mathematics</option>
                                                        <option value="22222222-2222-2222-2222-222222222222">Arts & Humanities</option>
                                                        <option value="33333333-3333-3333-3333-333333333333">Computer Science</option>
                                                        <option value="44444444-4444-4444-4444-444444444444">Social Sciences</option>
                                                        <option value="55555555-5555-5555-5555-555555555555">Natural Sciences</option>
                                                    </select>
                                                </div>
                                            </div>


                                        </div>
                                    </div>

                                    <!-- Course Details -->
                                    <div class="border-l-4 border-teal-500 pl-4">
                                        <h3 class="text-sm font-bold text-gray-700 mb-4">Course Details</h3>
                                        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">

                                            <div class="md:col-span-2">
                                                <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                    Department <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative group">
                                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                        <svg class="w-4 h-4 text-gray-400 group-focus-within:text-cyan-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                                        </svg>
                                                    </div>
                                                    <select @bind="createCourse.Department"
                                                    class=" w-full pl-10 pr-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all bg-gray-50 focus:bg-white">
                                                        <option value="">Select Department</option>
                                                        <option value="@CourseDepartment.DIT">Department of Industrial Technology</option>
                                                        <option value="@CourseDepartment.DCS">Department of Computer Studies</option>
                                                        <option value="@CourseDepartment.DGTT">Department of General Teacher Training</option>
                                                        <option value="@CourseDepartment.CCJE"> College of Criminal Justice Education</option>
                                                        <option value="@CourseDepartment.DBM">Department of Business Administration</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div>
                                                <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                    Max Capacity <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative group">
                                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                        <svg class="w-4 h-4 text-gray-400 group-focus-within:text-cyan-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
                                                        </svg>
                                                    </div>
                                                    <input @bind="createCourse.MaxCapacity"
                                                           class="w-full pl-10 pr-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all bg-gray-50 focus:bg-white"
                                                           placeholder="3" />
                                                </div>
                                            </div>
                                            <div>
                                                <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                    Units <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative group">
                                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                        <svg class="w-4 h-4 text-gray-400 group-focus-within:text-cyan-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
                                                        </svg>
                                                    </div>
                                                    <input @bind="createCourse.Unit"
                                                    class="w-full pl-10 pr-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all bg-gray-50 focus:bg-white"
                                                    placeholder="3" />
                                                </div>
                                            </div>

                                            <div>
                                                <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                    Price <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative group">
                                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                        <svg class="w-4 h-4 text-gray-400 group-focus-within:text-cyan-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                        </svg>
                                                    </div>
                                                    <input @bind="createCourse.Cost"
                                                    class="w-full pl-10 pr-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all bg-gray-50 focus:bg-white"
                                                    placeholder="0.00" />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mt-4">
                                            <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                Course Description
                                            </label>
                                            <textarea @bind="createCourse.CourseDescriptiion"
                                            rows="3"
                                            class="w-full px-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all resize-none bg-gray-50 focus:bg-white"
                                            placeholder="Enter a detailed description of the course..." />
                                        </div>
                                    </div>

                                    <!--schedule info-->
                                    <div class="border-l-4 border-orange-500 pl-4">
                                        <h3 class="text-sm font-bold text-gray-700 mb-4">Schedule Information</h3>
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                                            <div>
                                                <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                    Semester <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative group">
                                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                        <svg class="w-4 h-4 text-gray-400 group-focus-within:text-cyan-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                                        </svg>
                                                    </div>
                                                    <select @bind="createCourse.Semester"
                                                    class="w-full pl-10 pr-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all bg-gray-50 focus:bg-white">
                                                        <option value="">Select Semester</option>
                                                        <option value="@CourseSemester.First_Semester">1st Semester</option>
                                                        <option value="@CourseSemester.Second_Semester">2nd Semester</option>
                                                    </select>
                                                </div>
                                            </div>


                                            <div>
                                                <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                    School Year <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative group">
                                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                        <svg class="w-4 h-4 text-gray-400 group-focus-within:text-cyan-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                                        </svg>
                                                    </div>
                                                    <input @bind="createCourse.SchoolYear"
                                                    class="w-full pl-10 pr-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all bg-gray-50 focus:bg-white"
                                                    placeholder="2024-2025" />
                                                </div>
                                            </div>


                                            <div>
                                                <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                    Schedule
                                                </label>
                                                <div class="relative group">
                                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                        <svg class="w-4 h-4 text-gray-400 group-focus-within:text-cyan-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                        </svg>
                                                    </div>
                                                    <input @bind="createCourse.Schedule"
                                                    class="w-full pl-10 pr-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all bg-gray-50 focus:bg-white"
                                                    placeholder="MWF 10:00-11:00 AM" />
                                                </div>
                                            </div>


                                            <div>
                                                <label class="block text-[10px] font-bold text-gray-600 mb-2 uppercase tracking-wide">
                                                    Room
                                                </label>
                                                <div class="relative group">
                                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                        <svg class="w-4 h-4 text-gray-400 group-focus-within:text-cyan-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                                        </svg>
                                                    </div>
                                                    <input @bind="createCourse.Room"
                                                    class="w-full pl-10 pr-3 py-2.5 text-xs border-1 border-stone-300 rounded-lg focus:border-cyan-500 focus:ring-2 focus:ring-cyan-100 outline-none transition-all bg-gray-50 focus:bg-white"
                                                    placeholder="Room 301" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="flex gap-3 pt-4 justify-end border-t-2 border-gray-100">
                                        <button type="submit"
                                        class="btn p-4 bg-gradient-to-r from-cyan-500 to-cyan-600 text-white py-3 rounded-lg text-sm font-normal hover:from-cyan-600 hover:to-cyan-700 transition-all shadow-lg hover:shadow-xl flex items-center justify-center gap-2">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                            Create Course
                                        </button>
                                        <NavLink href="/coursemanagemnt"
                                        class="btn px-8 py-3 border-1 border-stone-300 text-gray-700 rounded-lg text-sm font-normal hover:bg-gray-100 transition-all flex items-center gap-2">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                            Cancel
                                        </NavLink>
                                    </div>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="drawer-side">
            <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
            <ul class="menu min-h-full w-62 p-4 text-white" style="background: radial-gradient(at 0% 0%, rgb(6, 182, 212) 0px, transparent 50%), radial-gradient(at 100% 100%, rgb(14, 116, 144) 0px, transparent 50%), radial-gradient(at 100% 0%, rgb(8, 145, 178) 0px, transparent 50%), radial-gradient(at 0% 100%, rgb(21, 94, 117) 0px, transparent 50%), rgb(17, 24, 39);">
                <li class="mx-auto mb-4">
                    <div class="w-[92px] h-[92px] bg-gradient-to-br from-amber-50 to-amber-50 rounded-full flex items-center justify-center border-4 border-orange-300 shadow-lg">
                        <svg class="w-13 h-13 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                </li>
                <li><a class="text-white text-2xl font-light btn btn-outline btn-dash btn-primary">Course Records</a></li>
                <li class="mt-10"><NavLink href="/createcourse" class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Create Course</NavLink></li>
                <li class="mt-2"><a class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Settings</a></li>
                <li class="mt-2"><a class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Logout</a></li>
                <li class="mt-10"><NavLink href="/studentmanagement" class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Student Records</NavLink></li>
                <li class="mt-2"><NavLink href="/facultyannouncement" class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Announcements</NavLink></li>
                <li class="mt-2"><NavLink href="/facultyprofile" class="text-white text-md btn-[40%] font-semibold btn btn-outline btn-primary">Profile</NavLink></li>
            </ul>
        </div>
    </div>
</div>

@code {
    private CreateCourseDto createCourse { get; set; } = new();

    private string? Error { get; set; }
    private Category category { get; set; } = new();

    private bool _isInitialized;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            _isInitialized = true;
            StateHasChanged();
        }
    }
    private async Task HandleSubmit()
    {
        if (!_isInitialized)
        {
            Error = "Please wait until the page fully loads.";
            return;
        }
        var Request = await handlingCourse.AddCourse(createCourse);
        if (Request is null)
        {
            Error = "Fill Up All Requirements";
            return;
        }
        navigate.NavigateTo("/coursemanagemnt");
    }


}