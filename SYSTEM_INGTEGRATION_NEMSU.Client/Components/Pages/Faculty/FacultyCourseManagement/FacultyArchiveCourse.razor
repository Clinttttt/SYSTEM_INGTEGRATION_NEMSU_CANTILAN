@code {
    [Parameter]
    public IEnumerable<CourseDto>? Course { get; set; }
    private string? Error { get; set; }
    private bool hasrender = false;
    public IEnumerable<CourseDto>? Filtered { get; set; }
    public string SearchQuery = "";

    public UpdateCourseDto udpatecourse { get; set; } = new();
    private bool Hasrender = false;
    public CourseDto? course { get; set; }
    public EventCallback Reload { get; set; }
    public FacultyPhotoId? facultyPhoto { get; set; }
    public string? PreviewUrl { get; set; }
    public List<HandlingStudentsDto>? studentlist { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!hasrender && firstRender)
        {
            hasrender = true;
            facultyPhoto = await facultyRecordApi.FacultyPhotoIDAsync();

            if (facultyPhoto?.Photo is not null)
            {
                PreviewUrl = $"data:{facultyPhoto?.PhotoContentType};base64,{Convert.ToBase64String(facultyPhoto!.Photo)}";
            }
            Course = await handlingApiCourse.DisplayArchiveCourseAsync();

            StateHasChanged();
            if (Course is null)
            {
                Error = "Nothing to display";
                return;
            }
            var firstCourse = Course.FirstOrDefault();
            if (firstCourse is null)
            {
                Error = "Nothing to display";
                return;
            }
            udpatecourse.Id = firstCourse.Id;
            udpatecourse.Title = firstCourse.Title;
            udpatecourse.CategoryId = firstCourse.CategoryId;
            udpatecourse.Department = firstCourse.Department!.Value;
            udpatecourse.Unit = firstCourse.Unit;
            udpatecourse.Cost = firstCourse.Cost;
            udpatecourse.CourseDescription = firstCourse.CourseDescriptiion;
            udpatecourse.Semester = firstCourse.Semester!.Value;
            udpatecourse.Schedule = firstCourse.Schedule;
            udpatecourse.MaxCapacity = firstCourse.MaxCapacity;
            udpatecourse.SchoolYear = firstCourse.SchoolYear;
            udpatecourse.Room = firstCourse.Room;
            udpatecourse.CourseStatus = firstCourse.CourseStatus;
            udpatecourse.CourseCode = firstCourse.CourseCode;
            Filtered = Course?.ToList();
            StateHasChanged();

        }
    }
    public void SearchFilter()
    {
        if (string.IsNullOrWhiteSpace(SearchQuery))
        {
            Filtered = Course?.ToList();
        }
        else
        {
            var query = SearchQuery.ToLower();
            Filtered = Course?.Where(s => s.CourseCode!.ToLower().Contains(query) ||
            s.Title!.ToLower().Contains(query)).ToList();
        }
        StateHasChanged();
    }

    public async Task ReloadCourseData()
    {
        Course = await handlingApiCourse.DisplayArchiveCourseAsync();
    }
}


