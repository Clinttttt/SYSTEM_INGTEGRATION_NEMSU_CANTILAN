@rendermode InteractiveServer

<dialog id="my_modal_delete" class="modal modal-bottom sm:modal-middle ">
    <div class="modal-box rounded-sm">

        <div class="flex justify-center mb-4">
            <div class="rounded-full bg-error/10 p-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-error" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
            </div>
        </div>


        <h3 class="text-2xl font-bold text-center mb-2 text-gray-700">Delete Course?</h3>


        <p class="text-center text-gray-600 mb-6">
            Are you sure you want to delete this course? This action cannot be undone and all course data will be permanently removed.
        </p>


        <div class="modal-action justify-center">
            <form method="dialog" class="flex gap-3">

                <button class="btn btn-ghost text-gray-700">Cancel</button>


                <button @onclick="OnClickHandler" class="btn btn-error">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    Delete
                </button>
            </form>
        </div>
    </div>


    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>
@code{

    [Parameter]
    public EventCallback OnClickHandler { get; set; }
}