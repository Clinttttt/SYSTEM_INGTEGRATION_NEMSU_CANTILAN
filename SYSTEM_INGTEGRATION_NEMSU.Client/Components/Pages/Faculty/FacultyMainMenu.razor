@code {
    public FacultyRecordDto? info { get; set; } = null;
    public SummaryStatisticsDto? stats { get; set; } = null;
    private bool hasrender = false;
    private string? Fullname { get; set; }
    public FacultyPhotoId? facultyPhoto { get; set; }
    public string? preview { get; set; }
    protected override async Task OnAfterRenderAsync(bool firstrender)
    {

        if (!hasrender && firstrender)
        {
            hasrender = true;
            stats = await handlingStudentsApi.SummaryStatisticsAsync();
            info = await facultyRecordApi.DisplayFacultyDetailsAsync();
            Fullname = $"{info?.FacultyPersonalInformationDto?.FirstName}" + " " +                    
                       $"{info?.FacultyPersonalInformationDto?.LastName}";

            facultyPhoto = await facultyRecordApi.FacultyPhotoIDAsync();
            if(facultyPhoto?.Photo is not null)
            {
                preview = $"data:{facultyPhoto?.PhotoContentType};base64,{Convert.ToBase64String(facultyPhoto!.Photo)}";
            }       
        }
        StateHasChanged();
    }

}
















