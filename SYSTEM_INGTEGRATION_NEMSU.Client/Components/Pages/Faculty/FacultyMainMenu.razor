@inject IFacultyRecordApi facultyRecordApi
@inject IHandlingStudentsApi handlingStudentsApi
@rendermode InteractiveServer
@inject IFacultyRecordApi faculty
@inject NavigationManager Navigation
@page "/facultymainmenu"

<div class="h-screen content overflow-hidden" style="background: radial-gradient(at 0% 0%, rgb(6, 182, 212) 0px, transparent 50%), radial-gradient(at 100% 100%, rgb(14, 116, 144) 0px, transparent 50%), radial-gradient(at 100% 0%, rgb(8, 145, 178) 0px, transparent 50%), radial-gradient(at 0% 100%, rgb(21, 94, 117) 0px, transparent 50%), rgb(17, 24, 39);">

    <div class="flex justify-center">
        <nav class="bg-white/65 w-[80%] backdrop-blur-sm shadow-xl rounded-2xl mx-4 mt-4 mb-8 p-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    @if (!string.IsNullOrEmpty(preview))
                    {
                        <div class="w-12 h-12">
                            <img src="@preview" alt="Faculty Photo" class="w-full h-full object-cover rounded-full border-2 border-orange-500" />
                        </div>
                    }
                    else
                    {
                        <div class="w-12 rounded-full border-2 border-orange-500 shadow-lg hover:shadow-xl transition-all duration-300 bg-gradient-to-br from-orange-400 to-orange-600 p-0.5">
                            <div class="w-full h-full rounded-full bg-white flex items-center justify-center">
                                <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                            </div>
                        </div>
                    }
                    <div class="hidden md:block">
                        <h1 class="text-lg font-semibold text-gray-700 italic">What you teach is their future</h1>
                    </div>
                </div>

                <div class="flex items-center gap-4">
                    <div class="hidden sm:block text-right">
                        <div class="text-sm font-semibold text-gray-700">Prof. @Fullname</div>
                        <div class="text-xs text-gray-500">ID: FAC-@info?.FacultyAcademicInformationDto?.FacultySchoolId</div>
                    </div>
                    <div class="w-11 h-11 bg-gradient-to-br from-orange-500 to-orange-600 rounded-full flex items-center justify-center text-white font-bold shadow-lg cursor-pointer hover:shadow-xl transition-shadow">
                        @(Fullname?.Split(' ').Length >= 2
                            ? $"{Fullname.Split(' ')[0][0]}{Fullname.Split(' ')[1][0]}"
                            : Fullname?[0].ToString())
                    </div>
                </div>
            </div>

            <div class="md:hidden mt-3 text-center">
                <h1 class="text-sm font-semibold text-gray-800">Faculty Management System</h1>
            </div>
        </nav>
    </div>

    <div class="max-w-6xl mx-auto px-4 pb-12">
        @if (info is null)
        {
            <div class="flex justify-center items-center py-32">
                <div class="text-center">
                    <div class="relative">
                        <div class="w-20 h-20 border-4 border-orange-200 border-t-orange-600 rounded-full animate-spin mx-auto"></div>
                    </div>
                    <p class="text-white mt-6 text-lg font-semibold">Loading Dashboard...</p>
                </div>
            </div>
        }
        else
        {
            <div class="text-center mb-12">
                <h1 class="text-4xl md:text-3xl font-black mb-3" style="text-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);">
                    <span class="text-white">Welcome Back, </span>
                    <span class="text-orange-500">@info?.FacultyPersonalInformationDto?.FirstName!</span>
                </h1>
                <p class="text-xl text-cyan-50 font-medium" style="text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);">
                    Your faculty management dashboard
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 max-w-[100%] mx-auto">

             
                <NavLink href="/studentmanagement" class="bg-white/65 backdrop-blur-sm rounded-2xl p-5 shadow-xl hover:shadow-2xl hover:shadow-cyan-100 transform hover:-translate-y-2 transition-all duration-300 cursor-pointer relative overflow-hidden group block">
                    <div class="w-16 h-16 bg-gradient-to-br from-cyan-500 to-cyan-600 rounded-2xl flex items-center justify-center text-white mb-5 shadow-lg group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                    </div>
                    <h2 class="text-lg font-bold text-gray-700 mb-3">Student Management</h2>
                    <p class="text-gray-600 text-sm leading-relaxed mb-4">
                        View, manage, and verify student information and enrollment data
                    </p>
                    <span class="inline-block px-4 py-1.5 rounded-full text-xs font-semibold bg-cyan-100 text-cyan-700">
                        @stats?.TotalStudent Students
                    </span>
                </NavLink>

              
                <NavLink href="/coursemanagemnt" class="bg-white/65 backdrop-blur-sm rounded-2xl p-5 shadow-xl hover:shadow-2xl hover:shadow-orange-100 transform hover:-translate-y-2 transition-all duration-300 cursor-pointer relative overflow-hidden group block">
                    <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center text-white mb-5 shadow-lg group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                    </div>
                    <h2 class="text-lg font-bold text-gray-700 mb-3">Course Management</h2>
                    <p class="text-gray-600 text-sm leading-relaxed mb-4">
                        Manage course offerings and curriculum information
                    </p>
                    <span class="inline-block px-4 py-1.5 rounded-full text-xs font-semibold bg-orange-100 text-orange-700">
                        @stats?.TotalCourse Courses
                    </span>
                </NavLink>

                <NavLink href="/facultyannouncement" class="bg-white/65 backdrop-blur-sm rounded-2xl p-5 shadow-xl hover:shadow-2xl hover:shadow-teal-100 transform hover:-translate-y-2 transition-all duration-300 cursor-pointer relative overflow-hidden group block">
                    <div class="w-16 h-16 bg-gradient-to-br from-teal-500 to-teal-600 rounded-2xl flex items-center justify-center text-white mb-5 shadow-lg group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                        </svg>
                    </div>
                    <h2 class="text-lg font-bold text-gray-700 mb-3">Announcements</h2>
                    <p class="text-gray-600 text-sm leading-relaxed mb-4">
                        Manage faculty announcements and important notices
                    </p>
                    <span class="inline-block px-4 py-1.5 rounded-full text-xs font-semibold bg-teal-100 text-teal-700">
                        Post now
                    </span>
                </NavLink>

             
                <NavLink href="/facultyprofile" class="bg-white/65 backdrop-blur-sm rounded-2xl p-5 shadow-xl hover:shadow-2xl hover:shadow-emerald-100 transform hover:-translate-y-2 transition-all duration-300 cursor-pointer relative overflow-hidden group block">
                    <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-2xl flex items-center justify-center text-white mb-5 shadow-lg group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <h2 class="text-lg font-bold text-gray-700 mb-3">Profile Details</h2>
                    <p class="text-gray-600 text-sm leading-relaxed mb-4">
                        Manage your faculty profile information and account settings
                    </p>
                    <span class="inline-block px-4 py-1.5 rounded-full text-xs font-semibold bg-emerald-100 text-emerald-700">
                        Complete
                    </span>
                </NavLink>

            </div>
        }
    </div>
</div>

@code {
    public FacultyRecordDto? info { get; set; } = null;
    public SummaryStatisticsDto? stats { get; set; } = null;
    private bool hasrender = false;
    private string? Fullname { get; set; }
    public FacultyPhotoId? facultyPhoto { get; set; }
    public string? preview { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstrender)
    {
        if (!hasrender && firstrender)
        {
            hasrender = true;
            var facultyRecord = await faculty.DisplayFacultyDetailsAsync();

            if (facultyRecord is null && string.IsNullOrEmpty(facultyRecord?.FacultyPersonalInformationDto?.FirstName))
            {
                Navigation.NavigateTo("/facultyfillout", forceLoad: true);
                return;
            }
            stats = await handlingStudentsApi.SummaryStatisticsAsync();
            info = await facultyRecordApi.DisplayFacultyDetailsAsync();
            Fullname = $"{info?.FacultyPersonalInformationDto?.FirstName}" + " " +
                       $"{info?.FacultyPersonalInformationDto?.LastName}";

            facultyPhoto = await facultyRecordApi.FacultyPhotoIDAsync();
            if (facultyPhoto?.Photo is not null)
            {
                preview = $"data:{facultyPhoto?.PhotoContentType};base64,{Convert.ToBase64String(facultyPhoto!.Photo)}";
            }
        }
        StateHasChanged();
    }
}