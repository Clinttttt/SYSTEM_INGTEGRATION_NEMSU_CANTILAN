<ForgotPassword sendcode="HandlePassword" />
<ForgotPasswordNewPassword Code="HandleCode" newpassword="NewPassword" />
<ForgotPasswordCode Code="@forgotPassword" />
<ForgotPasswordCodeFailed />
<ForgotPasswordFailed />
<ForgotPasswordSuccess />
<LoginFailed />


@code {
    public LoginDto login { get; set; } = new();
    public string? Error { get; set; }
    private bool Hasrender = false;
    private IEnumerable<Claim> claims = [];
    public bool spinner = false;
    public bool newpassword { get; set; }
    public string? AssignedCode { get; set; }
    public string? forgotPassword { get; set; }
    public string? EmailAddress { get; set; }
    public UserRole userRole { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var state = await authStateProvider.GetAuthenticationStateAsync();
        claims = state.User.Claims;

    }

    public void HandleCode(string Code)
    {
        AssignedCode = Code;
    }

    public async Task NewPassword(string newPassword)
    {
        if (AssignedCode != forgotPassword)
        {
            await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_code_failed').checked = true;");
            return;
        }

        var dto = new NewPasswordDto
            {
                Password = newPassword!,
                EmailAddress = EmailAddress!
            };
        newpassword = await studentRecordApi.StudentNewPassword(dto);
        if (newpassword is false)
        {
            await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_code_failed').checked = true;");
        }
        else
        {
            await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_forgotpassword_success').checked = true;");
            await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_new_password').checked = false;");
        }
    }

    public async Task HandlePassword(string email)
    {
        EmailAddress = email;
        forgotPassword = await studentRecordApi.StudentForgotPassword(email);
        if (forgotPassword is null)
        {
            await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_wrong_email').checked = true;");
            return;
        }
        await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_send_code').checked = true;");
        await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_new_password').checked = true;");
        await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_forgotpassword').checked = false;");
    }

    private async Task HandleLogin()
    {

        if (string.IsNullOrEmpty(login.UserName) || string.IsNullOrEmpty(login.Password))
        {
            await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_login_failed').checked = true;");
            return;
        }
        try
        {


            spinner = true;
            var results = await authServices.LoginAsync(login);
            if (results is null)
            {
                await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_login_failed').checked = true;");
                spinner = false;
                return;
            }
            await localStorage.SetAsync("AccessToken", results.AccessToken!);
            await localStorage.SetAsync("RefreshToken", results.RefreshToken!);
            await Task.Delay(100);
            authStateProvider.NotifyUserChanged();
            await Task.Delay(500);

            try
            {
                var personal = await studentRecordApi.DisplayPersonalInformationAsync();
                var academic = await studentRecordApi.DisplayAcademicInformation();
                var contact = await studentRecordApi.DisplayContactInformationAsync();

                if (personal is not null)
                {
                    var Getuser = await GetUser.UserInfo(personal.StudentId);
                    if (Getuser is not null)
                    {
                        userRole = Getuser.Role;
                    }
                }

                if (userRole != UserRole.Student)
                {
                    await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_login_failed').checked = true;");
                    spinner = false;
                    return;
                }
                else if (personal is null && academic is null && contact is null)
                {
                    navigation.NavigateTo("/FillOutRegistration");
                }
                else
                {
                    navigation.NavigateTo("/studentmenu");
                }
            }
            catch
            {
                await JS.InvokeVoidAsync("eval", "document.getElementById('my_modal_login_failed').checked = true;");
                spinner = false;
            }
        

        }
        catch (Exception ex)
        {
            Console.WriteLine("Something went wrong:" + ex.Message);
        }
    }

    protected override async Task OnAfterRenderAsync(bool render)
    {
        if (render && !Hasrender)
        {
            Hasrender = true;
            try
            {
                await authServices.TryRefreshTokenAsync();
                var accesstoken = await localStorage.GetAsync<string>("AccessToken");
                var response = accesstoken.Success ? accesstoken.Value : null;
                if (response is not null)
                {
                    Console.WriteLine("AccessToken" + response);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine("Error" + ex.Message);
                spinner = false;
            }
            StateHasChanged();
        }
    }



}